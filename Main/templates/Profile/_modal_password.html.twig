{# templates/profile/modal_password.html.twig #}

<style>
  .pf-wrap{animation:pfIn .28s ease-out both}
  @keyframes pfIn{from{opacity:0;transform:translateY(10px) scale(.99)}to{opacity:1;transform:none}}
  .pf-card{
    border-radius:18px;background:#fff;
    border:1px solid rgba(0,0,0,.06);
    box-shadow:0 10px 28px rgba(0,0,0,.06);
  }
  .pf-head{
    border-radius:18px 18px 0 0;
    background: linear-gradient(135deg, rgba(220,53,69,.10), rgba(13,110,253,.08));
    border-bottom:1px solid rgba(0,0,0,.06);
  }
  .form-control{border-radius:12px}
  .pf-tip{
    border-radius:14px;
    border:1px solid rgba(0,0,0,.06);
    background:rgba(0,0,0,.01);
    padding:12px 14px;
    font-size:.9rem;
  }
  .invalid-feedback{display:block}
</style>

<div class="pf-wrap pf-card">
  <div class="pf-head p-3 p-md-4">
    <div class="d-flex align-items-center gap-2">
      <div class="rounded-circle d-flex align-items-center justify-content-center"
           style="width:42px;height:42px;background:rgba(220,53,69,.12);color:#dc3545;">
        <i class="bi bi-shield-lock"></i>
      </div>
      <div>
        <div class="fw-bold">Changer le mot de passe</div>
        <div class="text-muted" style="font-size:.9rem;">Renforcez la sécurité de votre compte MedFlow.</div>
      </div>
    </div>
  </div>

  <div class="p-3 p-md-4">
    <div class="pf-tip mb-3">
      <div class="fw-semibold mb-1"><i class="bi bi-lightning-charge me-1"></i> Conseils rapides</div>
      <ul class="mb-0 ps-3">
        <li>8 caractères minimum</li>
        <li>Ajoutez majuscules + chiffres</li>
        <li>Évitez prénom/nom/date naissance</li>
      </ul>
    </div>

{{ form_start(form, {
      'action': path('profile_modal_password_submit'),
      'method': 'POST',
      'attr': {'autocomplete':'off'}
    }) }}
      {% if form.plainPassword is defined %}
        {# Si ton ResetPasswordType = repeated field #}
        <div class="mb-3">
          <label class="form-label fw-semibold">Nouveau mot de passe</label>
          {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder':'Nouveau mot de passe'}}) }}
          {{ form_errors(form.plainPassword.first) }}
        </div>

        <div class="mb-3">
          <label class="form-label fw-semibold">Confirmer le mot de passe</label>
          {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder':'Confirmer le mot de passe'}}) }}
          {{ form_errors(form.plainPassword.second) }}
        </div>
      {% else %}
        {# fallback si ton form n'est pas repeated #}
        <div class="mb-3">
          {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form) }}
        </div>
      {% endif %}

      <div class="d-flex justify-content-end gap-2 mt-4">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
          Annuler
        </button>
        <button type="submit" class="btn btn-danger px-4">
          <i class="bi bi-arrow-repeat me-1"></i> Mettre à jour
        </button>
      </div>

    {{ form_end(form) }}
  </div>
</div>
