{% extends 'base_dashboard.html.twig' %}

{% block title %}Liste des patients{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="h3 mb-4">Patients — {{ queue ?: 'Tous' }}</h1>
    <form method="get" class="form-inline mb-3">
        <input type="text" class="form-control mr-2" name="q" value="{{ q }}" placeholder="Rechercher">
        <select class="form-control mr-2" name="verified">
            <option value="">Vérification (tous)</option>
            <option value="1" {% if verified == '1' %}selected{% endif %}>Vérifiés</option>
            <option value="0" {% if verified == '0' %}selected{% endif %}>Non vérifiés</option>
        </select>
        <button class="btn btn-primary">Filtrer</button>
    </form>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Score</th>
                    <th>Details</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for row in rows %}
                    {% set p = row.p %}
                    {% set q = row.quality %}
                    <tr>
                        <td>{{ p.getPrenom() }} {{ p.getNom() }}</td>
                        <td>{{ p.getEmailUser() }}</td>
                        <td>{{ p.getTelephoneUser() }}</td>
                        <td><span class="badge badge-info">{{ q.score }}/100</span></td>
                        <td>
                            {% for d in q.details %}
                                <span class="badge badge-light mr-1">{{ d }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            <a href="{{ path('staff_patients_show', {id: p.getId()}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="6" class="text-center text-muted">Aucun résultat</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}