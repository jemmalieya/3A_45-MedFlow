<!doctype html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <style>
    body { font-family: DejaVu Sans, sans-serif; font-size: 12px; color:#111; }
    .header { margin-bottom: 12px; }
    .title { font-size: 18px; font-weight: bold; }
    .muted { color:#666; }
    .kpi { width:100%; border-collapse: collapse; margin: 10px 0 16px; }
    .kpi td { border:1px solid #ddd; padding:8px; }
    .badge { padding:2px 8px; border-radius: 10px; font-weight: bold; }
    .danger { background:#f8d7da; }
    .warning { background:#fff3cd; }
    .info { background:#cff4fc; }
    .success { background:#d1e7dd; }
    table { width:100%; border-collapse: collapse; }
    th, td { border:1px solid #ddd; padding:6px; }
    th { background:#f5f5f5; text-align:left; }
  </style>
</head>
<body>
  <div class="header">
    <div class="title">Rapport Qualité & Risques — Patients</div>
    <div class="muted">
      Généré le {{ generatedAt|date('d/m/Y H:i') }}
      {% if staffName %} • Par {{ staffName }}{% endif %}
    </div>
  </div>

  <table class="kpi">
    <tr>
      <td><b>Total</b><br>{{ stats.total }}</td>
      <td><b>Vérifiés</b><br>{{ stats.verified }}</td>
      <td><b>Non vérifiés</b><br>{{ stats.unverified }}</td>
      <td><b>Tél invalides</b><br>{{ stats.phone_invalid }}</td>
      <td><b>Bloqués</b><br>{{ stats.blocked }}</td>
      <td><b>Liens expirés</b><br>{{ stats.expired_links }}</td>
    </tr>
  </table>

  <h3>Top 10 patients à traiter en priorité</h3>
  <table>
    <thead>
      <tr>
        <th>CIN</th>
        <th>Nom</th>
        <th>Email</th>
        <th>Téléphone</th>
        <th>Priorité</th>
        <th>Alertes</th>
      </tr>
    </thead>
    <tbody>
      {% for row in top %}
        {% set p = row.p %}
        {% set t = row.triage %}
        <tr>
          <td>{{ p.cin }}</td>
          <td>{{ p.nom }} {{ p.prenom }}</td>
          <td>{{ p.emailUser }}</td>
          <td>{{ p.telephoneUser ?: '-' }}</td>
          <td>{{ t.priority.level }}</td>
          <td>
            {% if t.alerts is empty %}
              Aucune
            {% else %}
              {% for a in t.alerts %}
                {{ a.label }}{% if not loop.last %}, {% endif %}
              {% endfor %}
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <h3>Recommandations</h3>
  <ul>
    {% for t in tips %}
      <li>{{ t }}</li>
    {% endfor %}
  </ul>
</body>
</html>
