{% extends 'base_dashboard.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="h4 mb-3">{{ p.getPrenom() }} {{ p.getNom() }}</h1>
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">Profil</div>
                <div class="card-body">
                    <p><strong>Email:</strong> {{ p.getEmailUser() ?? '—' }}</p>
                    <p><strong>Téléphone:</strong> {{ p.getTelephoneUser() ?? '—' }}</p>
                    <p><strong>Adresse:</strong> {{ p.getAdresseUser() ?? '—' }}</p>
                    <p><strong>CIN:</strong> {{ p.getCin() ?? '—' }}</p>
                    <p><strong>Vérifié:</strong> {{ p.isVerified() ? 'Oui' : 'Non' }}</p>
                    <p><strong>Score qualité:</strong> <span class="badge badge-info">{{ quality.score }}/100</span></p>
                    <div>
                        {% for d in quality.details %}
                            <span class="badge badge-light mr-1">{{ d }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">Journal de suivi</div>
                <div class="card-body text-muted">
                    Notes internes désactivées.
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}