              </div>

              <div id="participationFormWrapper" class="d-none">
                <form method="post" action="{{ path('app_evenement_demander', {id: evenement.id}) }}" class="mt-3">
                  <div class="row g-3">
                   {% set u = app.user %}

<div class="col-md-4">
  <label class="form-label">Nom</label>
  <input name="nom"
         class="form-control"
         placeholder="Votre nom"
