                {% if meteo is defined %}
                 <p>
                 üå° Temp√©rature : <strong>{{ meteo.main.temp }}¬∞C</strong><br>
                  üå• {{ meteo.weather[0].description }}<br>
                  üí® Vent : {{ meteo.wind.speed }} m/s
                  </p>
                  {% else %}
                  <p class="text-muted">M√©t√©o indisponible</p>
                  {% endif %}
                </div>
                </div>
              </div>

            



          </div>
          {# ===== Recommandations ===== #}
{# ===== Recommandations IA (PRO) ===== #}
{% if recommended is defined and recommended|length > 0 %}
