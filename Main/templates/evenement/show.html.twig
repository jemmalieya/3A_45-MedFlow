{# templates/evenement/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails Événements - MedFlow{% endblock %}

{% block stylesheets %}


<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('assets/css/evenement-show.css') }}">
{% endblock %}

{% block body %}
<main class="main">
  <section class="section" style="padding-top: 120px;">
    <div class="container">

      {# ===== Header ===== #}
      <div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-4">
        <div>
          <div class="d-flex align-items-center gap-2 mb-2">
            <h1 class="mb-0 fw-bold" style="letter-spacing:-.5px;">
              {{ evenement.titreEvent }}
            </h1>

            {# Statut badge #}
            {% set statut = evenement.statutEvent|lower %}
            {% if statut == 'publié' or statut == 'publie' %}
              <span class="badge rounded-pill px-3 py-2" style="background:#00BFA6; color:#fff;">
                <i class="bi bi-check2-circle me-1"></i>Publié
              </span>
            {% elseif statut == 'annulé' or statut == 'annule' %}
              <span class="badge rounded-pill px-3 py-2" style="background:#BC0B09; color:#fff;">
                <i class="bi bi-x-circle me-1"></i>Annulé
              </span>
            {% else %}
              <span class="badge rounded-pill px-3 py-2 bg-light text-dark border">
                {{ evenement.statutEvent }}
              </span>
            {% endif %}
          </div>

          <div class="text-muted d-flex flex-wrap gap-3">
            <span>
              <i class="bi bi-geo-alt me-1" style="color:#0097B2;"></i>
              {{ evenement.nomLieuEvent }}, {{ evenement.villeEvent }}
            </span>
            <span>
              <i class="bi bi-calendar-event me-1" style="color:#0097B2;"></i>
              {{ evenement.dateDebutEvent|date('d/m/Y') }} → {{ evenement.dateFinEvent|date('d/m/Y') }}
            </span>
          </div>
        </div>

        <div class="d-flex gap-2">
          <a href="{{ path('app_evenements') }}" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Retour
          </a>
        </div>
      </div>

      {# ===== Cover Card + Formulaire sous l'image + Contenu ===== #}
      <div class="card border-0 shadow-sm overflow-hidden mb-4" style="border-radius:18px;">

        {% set cover = evenement.imageCouvertureEvent ? evenement.imageCouvertureEvent : asset('assets/img/health/showcase-1.webp') %}

        {# ===== Cover ===== #}
        <div style="
          position:relative;
          height: 320px;
          background-image: url('{{ cover }}');
          background-size: cover;
          background-position: center;
        ">
          <div style="
            position:absolute; inset:0;
            background: linear-gradient(180deg, rgba(0,0,0,.10), rgba(0,0,0,.55));
          "></div>

          <div class="position-absolute bottom-0 start-0 p-4 text-white">
            <div class="d-flex flex-wrap gap-2">
              <span class="badge rounded-pill px-3 py-2"
                    style="background:rgba(255,255,255,.14); border:1px solid rgba(255,255,255,.25);">
                <i class="bi bi-tag me-1"></i>{{ evenement.typeEvent }}
              </span>
              <span class="badge rounded-pill px-3 py-2"
                    style="background:rgba(255,255,255,.14); border:1px solid rgba(255,255,255,.25);">
                <i class="bi bi-person-badge me-1"></i>{{ evenement.nomOrganisateurEvent }}
              </span>
            </div>
          </div>
        </div>

        <div class="card-body p-4">

          {# Flash messages #}
          {% for m in app.flashes('success') %}
            <div class="alert alert-success">{{ m }}</div>
          {% endfor %}
          {% for m in app.flashes('danger') %}
            <div class="alert alert-danger">{{ m }}</div>
          {% endfor %}

          {# ===== Bloc Participation (sous l'image) ===== #}
          <div class="event-join-card border rounded-4 p-4 mb-4">
            <div class="d-flex align-items-start justify-content-between gap-3 flex-wrap">
              <div>
                <h5 class="mb-1 fw-bold">
                  <i class="bi bi-send-check me-2"></i>Participer à cet événement
                </h5>
                <div class="text-muted small">
                  Remplissez une demande de participation. Vous serez contacté(e) via email/téléphone.
                </div>
              </div>
            </div>

            <hr class="my-3"/>

            {% if not evenement.canReceiveDemandes %}
              <div class="alert alert-warning mb-0">
                Les inscriptions sont fermées (date limite / événement terminé / complet / annulé).
              </div>
            {% else %}

              <div class="mb-3">
                <div class="fw-semibold mb-2">Souhaitez-vous participer ?</div>

                <div class="d-flex gap-3 flex-wrap">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input js-participate-choice" type="radio" name="participer_choice" id="participerOui" value="oui">
                    <label class="form-check-label" for="participerOui">Oui</label>
                  </div>

                  <div class="form-check form-check-inline">
                    <input class="form-check-input js-participate-choice" type="radio" name="participer_choice" id="participerNon" value="non" checked>
                    <label class="form-check-label" for="participerNon">Non</label>
                  </div>
                </div>

                <div class="text-muted small mt-2">
                  Si vous choisissez <b>Oui</b>, le formulaire s’affichera.
                </div>
              </div>

              <div id="participationFormWrapper" class="d-none">
                <form method="post" action="{{ path('app_evenement_demander', {id: evenement.id}) }}" class="mt-3">
                  <div class="row g-3">
                    <div class="col-md-4">
                      <label class="form-label">Nom</label>
                      <input name="nom" class="form-control" placeholder="Votre nom" >
                    </div>
                    <div class="col-md-4">
                      <label class="form-label">Email</label>
                      <input name="email" type="email" class="form-control" placeholder="ex: nom@email.com" >
                    </div>
                    <div class="col-md-4">
                      <label class="form-label">Téléphone</label>
                      <input name="tel" class="form-control" placeholder="+216 ..." >
                    </div>
                    <div class="col-12">
                      <label class="form-label">Message</label>
                      <textarea name="message" class="form-control" rows="3" placeholder="Pourquoi voulez-vous participer ?"></textarea>
                    </div>
                  </div>

                  <div class="d-flex gap-2 mt-3">
                    <button class="btn btn-primary">
                      <i class="bi bi-send me-1"></i>Envoyer la demande
                    </button>
                    <button type="button" class="btn btn-outline-secondary" id="btnCancelParticipation">
                      Annuler
                    </button>
                  </div>
                </form>
              </div>

            {% endif %}
          </div>

          {# ===== Contenu ===== #}
          <div class="row g-4">

            {# Left: Description/Objectif #}
            <div class="col-lg-8">
              <div class="p-4 bg-white border rounded-4" style="border-color:#e9f3ff !important;">
                <h5 class="fw-bold mb-2" style="color:#003399;">
                  <i class="bi bi-info-circle me-2" style="color:#0097B2;"></i>
                  Description
                </h5>
                <p class="text-muted mb-4" style="line-height:1.7;">
                  {{ evenement.descriptionEvent }}
                </p>

                <h5 class="fw-bold mb-2" style="color:#003399;">
                  <i class="bi bi-bullseye me-2" style="color:#0097B2;"></i>
                  Objectif
                </h5>
                <p class="text-muted mb-0" style="line-height:1.7;">
                  {{ evenement.objectifEvent }}
                </p>
              </div>
            </div>

            {# Right: Info card #}
            <div class="col-lg-4">
              <div class="p-4 rounded-4 shadow-sm"
                   style="background: linear-gradient(180deg, #f7fbff, #ffffff); border:1px solid #e6f1ff;">
                <h6 class="fw-bold mb-3" style="color:#003399;">
                  Détails rapides
                </h6>

                <div class="d-flex align-items-start gap-2 mb-3">
                  <i class="bi bi-geo me-1" style="color:#0097B2; font-size:1.2rem;"></i>
                  <div>
                    <div class="fw-semibold">Adresse</div>
                    <div class="text-muted small">{{ evenement.adresseEvent }}</div>
                  </div>
                </div>
<section id="map-section" class="mt-4">
  <h5 class="mb-2">Localisation</h5>

  <div id="map"
       style="height: 360px; border-radius: 16px; overflow: hidden;"
       data-nomlieu="{{ evenement.nomLieuEvent|e('html_attr') }}"
       data-adresse="{{ evenement.adresseEvent|e('html_attr') }}"
       data-ville="{{ evenement.villeEvent|e('html_attr') }}">
  </div>
</section>


                <div class="d-flex align-items-start gap-2 mb-3">
                  <i class="bi bi-envelope-paper me-1" style="color:#0097B2; font-size:1.2rem;"></i>
                  <div>
                    <div class="fw-semibold">Contact</div>
                    <div class="text-muted small">{{ evenement.emailContactEvent }}</div>
                    <div class="text-muted small">{{ evenement.telContactEvent }}</div>
                  </div>
                </div>

                <div class="d-flex align-items-start gap-2 mb-3">
                  <i class="bi bi-calendar2-week me-1" style="color:#0097B2; font-size:1.2rem;"></i>
                  <div>
                    <div class="fw-semibold">Dates</div>
                    <div class="text-muted small">
                      {{ evenement.dateDebutEvent|date('d/m/Y') }} → {{ evenement.dateFinEvent|date('d/m/Y') }}
                    </div>
                  </div>
                </div>

                <div class="d-flex align-items-start gap-2">
                  <i class="bi bi-bookmark-star me-1" style="color:#0097B2; font-size:1.2rem;"></i>
                  <div>
                    <div class="fw-semibold">Type</div>
                    <div class="text-muted small">{{ evenement.typeEvent }}</div>
                  </div>
                </div>

              </div>
            </div>

            <a href="#map-section" class="btn btn-outline-primary mt-3">
  <i class="bi bi-geo-alt"></i> Voir la localisation
</a>

          </div>

        </div>
      </div>

    </div>
  </section>
</main>
{% endblock %}

{% block javascripts %}

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script src="{{ asset('assets/js/evenement-map.js') }}"></script>


  {{ parent() }}
  form.addEventListener("submit", function(event) {
    event.preventDefault(); // Prevent default form submission
    console.log("Form submission caught");

    const nom = form.querySelector("input[name='nom']");
    const email = form.querySelector("input[name='email']");
    const tel = form.querySelector("input[name='tel']");
    const message = form.querySelector("textarea[name='message']");

    // Basic validation checks
    if (!nom.value || !email.value || !tel.value || !message.value) {
        console.log("Validation failed");
        alert("Veuillez remplir tous les champs.");
        return;
    } else {
        console.log("Validation passed");
    }

    
    const formData = new FormData(form);

    // Send the data via AJAX
    fetch("{{ path('app_evenement_demander', {id: evenement.id}) }}", {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            console.log("Form successfully submitted");
            alert("Demande envoyée avec succès.");
            form.reset(); // Reset form after submission
            participateFormWrapper.classList.add("d-none");
        } else {
            console.log("Error response:", data.message);
            alert("Une erreur est survenue, veuillez réessayer.");
        }
    })
    .catch(error => {
        console.error("Erreur AJAX:", error);
        alert("Une erreur est survenue.");
    });
});

{% endblock %}
