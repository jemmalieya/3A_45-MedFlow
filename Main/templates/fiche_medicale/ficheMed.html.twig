                                                                        <tr>
                                                                            <th>Fiche ID</th>
                                                                            <th>Diagnostic</th>
                                                                            <th>Observations</th>
                                                                            <th>Exam Results</th>
                                                                            <th>Start</th>
                                                                            <th>End</th>
                                                                            <th>Duration (min)</th>
                                                                            <th>Created At</th>
                                                                        </tr>
