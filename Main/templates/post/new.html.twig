<script>
  document.addEventListener('DOMContentLoaded', () => {
  const urlInput = document.getElementById('image_url');

  const img = document.getElementById('imgPreview');
  const placeholder = document.getElementById('imgPlaceholder');

  if (!urlInput || !img || !placeholder) return;

  const refresh = () => {
    const url = (urlInput.value || '').trim();

    if (!url) {
      img.style.display = 'none';
      img.removeAttribute('src');
      placeholder.textContent = 'Aucune image';
      placeholder.style.display = 'flex';
      return;
    }

    img.src = url;
    img.style.display = 'block';
    placeholder.style.display = 'none';

    img.onerror = () => {
      img.style.display = 'none';
      img.removeAttribute('src');
      placeholder.textContent = 'Lien invalide ou non-image';
      placeholder.style.display = 'flex';
    };
  };

  urlInput.addEventListener('input', refresh);
  refresh();
});

document.addEventListener('DOMContentLoaded', () => {

  const fields = {
    titre: document.getElementById('{{ form.titre.vars.id }}'),
    contenu: document.getElementById('{{ form.contenu.vars.id }}'),
    categorie: document.getElementById('{{ form.categorie.vars.id }}'),
    humeur: document.getElementById('{{ form.humeur.vars.id }}'),
    localisation: document.getElementById('post_localisation'),

    hashtags: document.getElementById('{{ form.hashtags.vars.id }}'),
  };

  const preview = {
    box: document.getElementById('postPreviewDetails'),
    titre: document.getElementById('pvTitre'),
    contenu: document.getElementById('pvContenu'),
    categorie: document.getElementById('pvCategorie'),
    humeur: document.getElementById('pvHumeur'),
    localisation: document.getElementById('pvLocalisation'),
    hashtags: document.getElementById('pvHashtags'),
  };

  const updatePreview = () => {
    let hasContent = false;

    // Titre
    if (fields.titre?.value.trim()) {
      preview.titre.textContent = fields.titre.value;
      hasContent = true;
    }

    // Contenu (extrait)
    if (fields.contenu?.value.trim()) {
      const text = fields.contenu.value.trim();
      preview.contenu.textContent =
        text.length > 100 ? text.substring(0, 100) + '‚Ä¶' : text;
      hasContent = true;
    }

    // Cat√©gorie
    if (fields.categorie?.value) {
      preview.categorie.textContent =
        fields.categorie.selectedOptions[0].text;
      hasContent = true;
    }

    // Humeur
    if (fields.humeur?.value) {
      preview.humeur.textContent = 'üòä ' + fields.humeur.selectedOptions[0].text;
      hasContent = true;
    }

    // Localisation
    if (fields.localisation?.value.trim()) {
      preview.localisation.textContent = 'üìç ' + fields.localisation.value;
      hasContent = true;
    }

    // Hashtags
    preview.hashtags.innerHTML = '';
    if (fields.hashtags?.value.trim()) {
      const tags = fields.hashtags.value
        .split(/[\s,]+/)
        .filter(Boolean)
        .slice(0, 6);

      tags.forEach(tag => {
        const span = document.createElement('span');
        span.className = 'badge bg-light text-dark border';
        span.textContent = tag.startsWith('#') ? tag : '#' + tag;
        preview.hashtags.appendChild(span);
      });

      hasContent = true;
    }

    preview.box.style.display = hasContent ? 'block' : 'none';
  };

  Object.values(fields).forEach(field => {
    if (field) {
      field.addEventListener('input', updatePreview);
      field.addEventListener('change', updatePreview);
    }
  });

  updatePreview();
});

document.addEventListener('DOMContentLoaded', () => {
  const contenu = document.getElementById('{{ form.contenu.vars.id }}');
  const titre = document.getElementById('{{ form.titre.vars.id }}');
  const hashtags = document.getElementById('{{ form.hashtags.vars.id }}');

  const btnImprove = document.getElementById('aiImprove');
  const btnTitle = document.getElementById('aiTitle');
  const btnTags = document.getElementById('aiTags');

  const box = document.getElementById('aiBox');
  const out = document.getElementById('aiResult');
  const apply = document.getElementById('aiApply');
  const close = document.getElementById('aiClose');

  let lastTask = 'improve';
  let lastText = '';

  async function callAI(task) {
    if (!contenu || !contenu.value.trim()) {
      alert('√âcris d‚Äôabord un contenu üôÇ');
      return;
    }

    lastTask = task;
    lastText = contenu.value.trim();

    box.style.display = 'block';
    out.textContent = '‚è≥ G√©n√©ration en cours...';

    const res = await fetch('{{ path("post_ai_generate") }}', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ task, text: lastText })
    });

    const data = await res.json();
    if (!data.ok) {
      out.textContent = data.message || 'Erreur IA';
      return;
    }
    out.textContent = data.result || '(vide)';
  }

  btnImprove?.addEventListener('click', () => callAI('improve'));
  btnTitle?.addEventListener('click', () => callAI('title'));
  btnTags?.addEventListener('click', () => callAI('hashtags'));

  apply?.addEventListener('click', () => {
    const txt = out.textContent.trim();
    if (!txt) return;

    if (lastTask === 'improve') {
      contenu.value = txt;
      contenu.dispatchEvent(new Event('input'));
    } else if (lastTask === 'title' && titre) {
      // prend la 1√®re ligne comme titre
      const firstLine = txt.split('\n').find(l => l.trim()) || txt;
      titre.value = firstLine.replace(/^\d+[\).\-\s]+/, '').trim();
      titre.dispatchEvent(new Event('input'));
    } else if (lastTask === 'hashtags' && hashtags) {
      hashtags.value = txt.replace(/\n/g,' ').trim();
      hashtags.dispatchEvent(new Event('input'));
    }
  });

  close?.addEventListener('click', () => box.style.display = 'none');
});
(function(){
  const input = document.getElementById('post_localisation');
  const btn = document.getElementById('btnGeo');
  const status = document.getElementById('geoStatus');

  if(!input || !btn) return;

  function setStatus(msg){ if(status) status.textContent = msg || ''; }

  btn.addEventListener('click', async () => {
    setStatus('');
    if(!navigator.geolocation){
      setStatus("La g√©olocalisation n'est pas support√©e par ce navigateur.");
      return;
    }

    setStatus("Localisation en cours...");
    navigator.geolocation.getCurrentPosition(async (pos) => {
      const lat = pos.coords.latitude;
      const lon = pos.coords.longitude;

      // On met d√©j√† lat/lon (utile m√™me si l'API de geocoding √©choue)
      input.value = `${lat.toFixed(5)}, ${lon.toFixed(5)}`;

      // Optionnel: reverse geocoding (adresse) via Nominatim (OpenStreetMap)
      try{
        const url = `https://nominatim.openstreetmap.org/reverse?format=jsonv2&lat=${lat}&lon=${lon}`;
        const res = await fetch(url, { headers: { 'Accept': 'application/json' } });
        const data = await res.json();
        if(data && data.display_name){
          input.value = data.display_name;
        }
        setStatus("Position r√©cup√©r√©e ‚úÖ");
      }catch(e){
        setStatus("Position r√©cup√©r√©e ‚úÖ (adresse non disponible)");
      }
    }, (err) => {
      setStatus("Impossible d'acc√©der √† la position (permission refus√©e ou GPS d√©sactiv√©).");
    }, { enableHighAccuracy: true, timeout: 8000 });
  });
})();

// ‚úÖ MAP MODAL (Leaflet) : choisir sur carte -> remplit le champ localisation
(function(){
  const input = document.getElementById('post_localisation');
  const hint = document.getElementById('mapHint');
  const modalEl = document.getElementById('mapModal');
  const mapDiv = document.getElementById('leafletMap');

  if(!input || !modalEl || !mapDiv || typeof L === 'undefined') return;

  let map = null;
  let marker = null;

  function setHint(msg){ if(hint) hint.textContent = msg || ''; }

  async function reverseGeocode(lat, lon){
    // Optionnel : convertir lat/lon en adresse (OpenStreetMap Nominatim)
    try{
      const url = `https://nominatim.openstreetmap.org/reverse?format=jsonv2&lat=${lat}&lon=${lon}`;
      const res = await fetch(url, { headers: { 'Accept': 'application/json' } });
      const data = await res.json();
      return data?.display_name || null;
    }catch(e){
      return null;
    }
  }

  modalEl.addEventListener('shown.bs.modal', async () => {
    // Cr√©e la map une seule fois
    if(!map){
      map = L.map('leafletMap', { zoomControl: true });

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
      }).addTo(map);

      // Position par d√©faut : Tunis
      map.setView([36.8065, 10.1815], 12);

      // Click sur carte
      map.on('click', async (e) => {
        const lat = e.latlng.lat;
        const lon = e.latlng.lng;

        if(!marker){
          marker = L.marker([lat, lon], { draggable: true }).addTo(map);
          marker.on('dragend', async () => {
            const p = marker.getLatLng();
            input.value = `${p.lat.toFixed(5)}, ${p.lng.toFixed(5)}`;
            input.dispatchEvent(new Event('input'));
            setHint("Position mise √† jour (drag) ‚úÖ");

            const addr = await reverseGeocode(p.lat, p.lng);
            if(addr){
              input.value = addr;
              input.dispatchEvent(new Event('input'));
            }
          });
        } else {
          marker.setLatLng([lat, lon]);
        }

        // met au moins les coordonn√©es
        input.value = `${lat.toFixed(5)}, ${lon.toFixed(5)}`;
        input.dispatchEvent(new Event('input'));
        setHint("Position choisie ‚úÖ (conversion en adresse...)");

        // tente une adresse
        const addr = await reverseGeocode(lat, lon);
        if(addr){
          input.value = addr;
          input.dispatchEvent(new Event('input'));
          setHint("Adresse r√©cup√©r√©e ‚úÖ");
        }else{
          setHint("Coordonn√©es enregistr√©es ‚úÖ (adresse non dispo)");
        }
      });

    } else {
      // Tr√®s important : Leaflet doit recalculer la taille dans un modal
      setTimeout(() => map.invalidateSize(), 200);
    }

    // Si possible, centre sur la position de l‚Äôutilisateur
    if(navigator.geolocation){
      navigator.geolocation.getCurrentPosition((pos)=>{
        map.setView([pos.coords.latitude, pos.coords.longitude], 14);
      });
    }
  });

})();

