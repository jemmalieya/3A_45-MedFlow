{% extends 'base.html.twig' %}
{% block title %}Nouveau post{% endblock %}

{% block body %}
<section class="section" style="padding-top:120px;">
  <div class="container">

    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h2 class="mb-1">Cr√©er un post</h2>
        <p class="text-muted mb-0">Publie un article avec image, cat√©gorie et hashtags.</p>
      </div>
      <a href="{{ path('post_index') }}" class="btn btn-outline-secondary">
        ‚Üê Retour au blog
      </a>
    </div>

    <div class="row g-4">
      <!-- Form -->
      <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
          <div class="card-body p-4 p-lg-5">

           {{ form_start(form, {
  'attr': {
    'class': 'needs-validation',
    'novalidate': 'novalidate'
  },
  'enctype': 'multipart/form-data'
}) }}


            <div class="mb-4">
              <label class="form-label fw-semibold">Titre</label>
              {{ form_widget(form.titre, {
                'attr': {
                  'class': 'form-control form-control-lg',
                  'placeholder': 'Ex : Prise de RDV en ligne : nouvelles √©tapes‚Ä¶'
                }
              }) }}
              <div class="form-error">
                {{ form_errors(form.titre) }}
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label fw-semibold">Contenu</label>
              {{ form_widget(form.contenu, {
                'attr': {
                  'class': 'form-control',
                  'rows': 8,
                  'placeholder': '√âcris ton contenu ici‚Ä¶'
                }
              }) }}
              <div class="form-text">
                Astuce : sois clair, ajoute des d√©tails utiles (service, rdv, labo‚Ä¶).
              </div>
              <div class="form-error">
                {{ form_errors(form.contenu) }}
              </div>
            </div>

            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label fw-semibold">Cat√©gorie</label>
                {{ form_widget(form.categorie, {
                  'attr': {
                    'class': 'form-control'
                  }
                }) }}
                <div class="form-error">
                  {{ form_errors(form.categorie) }}
                </div>
              </div>

              <div class="col-md-6">
                <label class="form-label fw-semibold">Humeur</label>
                {{ form_widget(form.humeur, {
                  'attr': {
                    'class': 'form-control',
                    'placeholder': 'Ex : Heureux, Stress√©, Motiv√©‚Ä¶'
                  }
                }) }}
                <div class="form-error">
                  {{ form_errors(form.humeur) }}
                </div>
              </div>

             <div class="col-md-6">
  <label class="form-label fw-semibold">Localisation</label>

  {{ form_widget(form.localisation, {
    'attr': {
      'class': 'form-control',
      'placeholder': 'Ex : Tunis, Ariana, Sousse‚Ä¶'
    }
  }) }}

  <div class="form-error">
    {{ form_errors(form.localisation) }}
  </div>
</div>


              <div class="col-md-6">
                <label class="form-label fw-semibold">Visibilit√©</label>
                {{ form_widget(form.visibilite, {
                  'attr': {
                    'class': 'form-select'
                  }
                }) }}
                <div class="form-error">
                  {{ form_errors(form.visibilite) }}
                </div>
              </div>

              <div class="col-md-6">
                <label class="form-label fw-semibold">Hashtags</label>
                {{ form_widget(form.hashtags, {
                  'attr': {
                    'class': 'form-control',
                    'placeholder': '#news #health #rdv'
                  }
                }) }}
                <div class="form-text">S√©pare avec espace ou virgule.</div>
                <div class="form-error">
                  {{ form_errors(form.hashtags) }}
                </div>
              </div>

              <div class="col-md-6">
                <label class="form-label fw-semibold">Image</label>
                {{ form_widget(form.img_post, {
                  'attr': {
                    'class': 'form-control'
                  }
                }) }}
                <div class="form-text">
                  Choisissez une image depuis votre ordinateur (JPG / PNG / WEBP).
                </div>
                <div class="form-error">
                  {{ form_errors(form.img_post) }}
                </div>
              </div>

              <div class="col-12">
                <div class="form-check mt-2">
                  {{ form_widget(form.est_anonyme, {'attr': {'class': 'form-check-input'}}) }}
                  <label class="form-check-label" for="{{ form.est_anonyme.vars.id }}">
                    Publier en anonyme
                  </label>
                </div>
                <div class="form-error">
                  {{ form_errors(form.est_anonyme) }}
                </div>
              </div>
            </div>

            <hr class="my-4">

            <div class="d-flex justify-content-end gap-2">
              <a href="{{ path('post_index') }}" class="btn btn-outline-secondary px-4">
                Annuler
              </a>
             <button type="submit" class="btn btn-primary px-4">
  Publier
</button>

            </div>

            {{ form_end(form) }}

          </div>
        </div>
      </div>

      <!-- Preview card (inchang√©) -->
      <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
          <div class="card-body p-4">
            <h5 class="mb-3">Aper√ßu</h5>
            <div class="ratio ratio-16x9 rounded overflow-hidden bg-light border">
              <img id="imgPreview" style="display:none;object-fit:cover;width:100%;height:100%;">
              <div id="imgPlaceholder" class="d-flex align-items-center justify-content-center text-muted">
                Aucune image
              </div>
            </div>
            <div class="mt-3" id="postPreviewDetails" style="display:none;">
  <span class="badge bg-primary mb-2 d-inline-block" id="pvCategorie"></span>

  <h6 class="fw-bold mb-1" id="pvTitre"></h6>

  <p class="text-muted mb-2" style="font-size:0.9rem;" id="pvContenu"></p>

  <div class="d-flex flex-wrap gap-2 mb-2">
    <span class="badge bg-light text-dark border" id="pvHumeur"></span>
    <span class="badge bg-light text-dark border" id="pvLocalisation"></span>
  </div>

  <div class="d-flex flex-wrap gap-2" id="pvHashtags"></div>
</div>
          </div>
        </div>
        


        <div class="alert alert-info border-0 shadow-sm mt-4">
          <div class="fw-semibold mb-1">Conseil</div>
          Une image claire + un titre court donnent un meilleur rendu ‚ÄúLatest blogs‚Äù.
        </div>
      </div>
    </div>

  </div>
</section>

<style>
  .form-error {
    color: #dc3545;
    font-size: 0.85rem;
    margin-top: 4px;
  }

  .card { border-radius: 14px; }
  .btn { border-radius: 10px; }
  .form-control, .form-select { border-radius: 10px; }
</style>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const inputId = '{{ form.img_post.vars.id }}';
    const fileInput = document.getElementById(inputId);

    const img = document.getElementById('imgPreview');
    const placeholder = document.getElementById('imgPlaceholder');

    if (!fileInput || !img || !placeholder) return;

    fileInput.addEventListener('change', (e) => {
      const file = e.target.files && e.target.files[0];

      if (!file) {
        img.style.display = 'none';
        img.removeAttribute('src');
        placeholder.style.display = 'flex';
        return;
      }

      // s√©curit√©: preview seulement pour images
      if (!file.type.startsWith('image/')) {
        img.style.display = 'none';
        img.removeAttribute('src');
        placeholder.textContent = 'Fichier non image';
        placeholder.style.display = 'flex';
        fileInput.value = '';
        return;
      }

      const reader = new FileReader();
      reader.onload = (ev) => {
        img.src = ev.target.result;
        img.style.display = 'block';
        placeholder.style.display = 'none';
      };
      reader.readAsDataURL(file);
    });
  });
document.addEventListener('DOMContentLoaded', () => {

  const fields = {
    titre: document.getElementById('{{ form.titre.vars.id }}'),
    contenu: document.getElementById('{{ form.contenu.vars.id }}'),
    categorie: document.getElementById('{{ form.categorie.vars.id }}'),
    humeur: document.getElementById('{{ form.humeur.vars.id }}'),
    localisation: document.getElementById('{{ form.localisation.vars.id }}'),
    hashtags: document.getElementById('{{ form.hashtags.vars.id }}'),
  };

  const preview = {
    box: document.getElementById('postPreviewDetails'),
    titre: document.getElementById('pvTitre'),
    contenu: document.getElementById('pvContenu'),
    categorie: document.getElementById('pvCategorie'),
    humeur: document.getElementById('pvHumeur'),
    localisation: document.getElementById('pvLocalisation'),
    hashtags: document.getElementById('pvHashtags'),
  };

  const updatePreview = () => {
    let hasContent = false;

    // Titre
    if (fields.titre?.value.trim()) {
      preview.titre.textContent = fields.titre.value;
      hasContent = true;
    }

    // Contenu (extrait)
    if (fields.contenu?.value.trim()) {
      const text = fields.contenu.value.trim();
      preview.contenu.textContent =
        text.length > 100 ? text.substring(0, 100) + '‚Ä¶' : text;
      hasContent = true;
    }

    // Cat√©gorie
    if (fields.categorie?.value) {
      preview.categorie.textContent =
        fields.categorie.selectedOptions[0].text;
      hasContent = true;
    }

    // Humeur
    if (fields.humeur?.value) {
      preview.humeur.textContent = 'üòä ' + fields.humeur.selectedOptions[0].text;
      hasContent = true;
    }

    // Localisation
    if (fields.localisation?.value.trim()) {
      preview.localisation.textContent = 'üìç ' + fields.localisation.value;
      hasContent = true;
    }

    // Hashtags
    preview.hashtags.innerHTML = '';
    if (fields.hashtags?.value.trim()) {
      const tags = fields.hashtags.value
        .split(/[\s,]+/)
        .filter(Boolean)
        .slice(0, 6);

      tags.forEach(tag => {
        const span = document.createElement('span');
        span.className = 'badge bg-light text-dark border';
        span.textContent = tag.startsWith('#') ? tag : '#' + tag;
        preview.hashtags.appendChild(span);
      });

      hasContent = true;
    }

    preview.box.style.display = hasContent ? 'block' : 'none';
  };

  Object.values(fields).forEach(field => {
    if (field) {
      field.addEventListener('input', updatePreview);
      field.addEventListener('change', updatePreview);
    }
  });

  updatePreview();
});
</script>


{% endblock %}
