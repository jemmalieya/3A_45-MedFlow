  display:inline-flex;
  align-items:center;
  gap:8px;
  padding:12px 18px;
  border-radius:14px;
  border:2px solid rgba(255,255,255,0.25);
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color:#fff;
