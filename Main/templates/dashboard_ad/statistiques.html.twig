{% extends 'base_admin.html.twig' %}

{% block title %}Statistiques{% endblock %}
{% block page_title %}Tableau de Bord Statistiques{% endblock %}

{% block breadcrumb %}
  <li class="breadcrumb-item">Statistiques</li>
{% endblock %}

{% block stylesheets %}
<style>
  .kpi-card{
    border: 1px solid rgba(15,23,42,.08);
    border-radius: 18px;
    overflow: hidden;
    box-shadow: 0 14px 40px rgba(16,24,40,.06);
  }
  .kpi-card .card-body{ padding: 18px 18px; }
  .kpi-sub{ font-size: 12px; color: rgba(100,116,139,.9); }
  .kpi-value{ font-size: 26px; font-weight: 800; letter-spacing: -.5px; }
  .kpi-icon{
    width: 46px; height: 46px; border-radius: 14px;
    display:flex; align-items:center; justify-content:center;
  }

  .panel-card{
    border: 1px solid rgba(15,23,42,.08);
    border-radius: 18px;
    overflow: hidden;
    box-shadow: 0 14px 40px rgba(16,24,40,.06);
  }
  .panel-card .card-header{
    background: transparent;
    border-bottom: 1px solid rgba(15,23,42,.06);
    padding: 14px 18px;
  }
  .panel-card .card-body{ padding: 16px 18px; }

  .badge-soft{
    background: rgba(15,23,42,.06);
    color: #0f172a;
    border: 1px solid rgba(15,23,42,.08);
    font-weight: 700;
  }

  .table thead th{
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: .04em;
    color: rgba(71,85,105,.9);
    background: rgba(248,250,252,.7);
    border-bottom: 1px solid rgba(15,23,42,.06) !important;
  }
  .table td{ vertical-align: middle; }
  .mini-avatar{
    width: 34px; height: 34px; border-radius: 12px;
    object-fit: cover;
    border: 1px solid rgba(15,23,42,.08);
    background: #fff;
  }
  .text-truncate-1{
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .chart-wrap{ min-height: 280px; }
  .chart-wrap-sm{ min-height: 240px; }

  .chip{
    display:inline-flex; align-items:center; gap:8px;
    padding: 8px 10px;
    border-radius: 999px;
    border: 1px solid rgba(15,23,42,.08);
    background: rgba(248,250,252,.7);
    font-weight: 700;
    font-size: 12px;
    color: #0f172a;
  }
</style>
{% endblock %}

{% block body %}

{# =========================
   KPI CARDS
   ========================= #}
<div class="row g-4 mb-4">

  <div class="col-lg-3 col-md-6">
    <div class="card kpi-card">
      <div class="card-body d-flex align-items-center justify-content-between">
        <div>
          <div class="kpi-sub">Utilisateurs</div>
          <div class="kpi-value">{{ totalUsers }}</div>
          <div class="kpi-sub">Total inscrits</div>
        </div>
        <div class="kpi-icon bg-soft-primary text-primary">
          <i class="feather-users"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6">
    <div class="card kpi-card">
      <div class="card-body d-flex align-items-center justify-content-between">
        <div>
          <div class="kpi-sub">Produits</div>
          <div class="kpi-value">{{ totalProduits }}</div>
          <div class="kpi-sub">Dans le catalogue</div>
        </div>
        <div class="kpi-icon bg-soft-success text-success">
          <i class="feather-box"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6">
    <div class="card kpi-card">
      <div class="card-body d-flex align-items-center justify-content-between">
        <div>
          <div class="kpi-sub">Commandes</div>
          <div class="kpi-value">{{ totalCommandes }}</div>
          <div class="kpi-sub">Total passées</div>
        </div>
        <div class="kpi-icon bg-soft-warning text-warning">
          <i class="feather-shopping-cart"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-md-6">
    <div class="card kpi-card">
      <div class="card-body d-flex align-items-center justify-content-between">
        <div>
          <div class="kpi-sub">Chiffre d’affaires</div>
          <div class="kpi-value">{{ caTotal|number_format(0, ',', ' ') }} DT</div>
          <div class="kpi-sub">
            {% if caMois is defined %}
              Ce mois : <strong>{{ caMois|number_format(0, ',', ' ') }} DT</strong>
            {% else %}
              Revenus (payées)
            {% endif %}
          </div>
        </div>
        <div class="kpi-icon bg-soft-danger text-danger">
          <i class="feather-dollar-sign"></i>
        </div>
      </div>
    </div>
  </div>

</div>

{# =========================
   CHARTS ROW
   ========================= #}
<div class="row g-4 mb-4">

  {# CA 12 mois #}
  <div class="col-lg-8">
    <div class="card panel-card">
      <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
          <i class="feather-trending-up text-primary"></i>
          <h5 class="card-title mb-0">CA (12 derniers mois)</h5>
        </div>
        <span class="chip">
          <i class="feather-calendar"></i>
          {{ "now"|date("Y") }}
        </span>
      </div>
      <div class="card-body">
        <div id="chart-ca" class="chart-wrap"></div>
      </div>
    </div>
  </div>

  {# Statuts #}
  <div class="col-lg-4">
    <div class="card panel-card">
      <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
          <i class="feather-pie-chart text-primary"></i>
          <h5 class="card-title mb-0">Commandes par statut</h5>
        </div>
      </div>
      <div class="card-body">
        <div id="chart-statut" class="chart-wrap-sm"></div>

        <div class="mt-3">
          {% for statut, nombre in commandesParStatut %}
            <div class="d-flex align-items-center justify-content-between py-2 {% if not loop.last %}border-bottom{% endif %}">
              <span class="fw-semibold text-truncate-1" style="max-width: 65%;">{{ statut }}</span>
              <span class="badge badge-soft">{{ nombre }}</span>
            </div>
          {% endfor %}
        </div>

      </div>
    </div>
  </div>

</div>

{# =========================
   TOP PRODUITS + TABLES
   ========================= #}
<div class="row g-4">

  {# Top produits #}
  <div class="col-lg-6">
    <div class="card panel-card">
      <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
          <i class="feather-award text-primary"></i>
          <h5 class="card-title mb-0">Top 5 produits les plus vendus</h5>
        </div>
        <span class="chip"><i class="feather-shopping-bag"></i> Ventes</span>
      </div>
      <div class="card-body">
        <div id="chart-top" class="chart-wrap-sm"></div>

        {% if topProduits|length == 0 %}
          <div class="text-center text-muted py-4">
            <i class="feather-inbox fs-2 d-block mb-2"></i>
            Aucune vente enregistrée.
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  {# Stock faible #}
  <div class="col-lg-6">
    <div class="card panel-card">
      <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
          <i class="feather-alert-triangle text-warning"></i>
          <h5 class="card-title mb-0">Alertes stock faible (≤ 5)</h5>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead>
              <tr>
                <th>Produit</th>
                <th>Catégorie</th>
                <th class="text-center">Stock</th>
                <th class="text-end">Statut</th>
              </tr>
            </thead>
            <tbody>
              {% for produit in produitsRupture %}
                <tr>
                  <td>
                    <div class="d-flex align-items-center gap-2">
                      <img src="{{ produit.imageProduit }}" class="mini-avatar" alt="{{ produit.nomProduit }}">
                      <div>
                        <div class="fw-semibold text-truncate-1" style="max-width: 260px;">{{ produit.nomProduit }}</div>
                        <div class="text-muted fs-11">ID: #{{ produit.id_produit }}</div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <span class="badge badge-soft">{{ produit.categorieProduit }}</span>
                  </td>
                  <td class="text-center">
                    {% if produit.quantiteProduit == 0 %}
                      <span class="badge bg-danger">0</span>
                    {% else %}
                      <span class="badge bg-warning">{{ produit.quantiteProduit }}</span>
                    {% endif %}
                  </td>
                  <td class="text-end">
                    {% set ok = (produit.statusProduit == 'Disponible') %}
                    <span class="badge bg-soft-{{ ok ? 'success' : 'danger' }} text-{{ ok ? 'success' : 'danger' }}">
                      {{ produit.statusProduit }}
                    </span>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="4" class="text-center text-muted py-4">
                    <i class="feather-check-circle text-success fs-3 d-block mb-2"></i>
                    Aucun produit en stock faible.
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  {# Dernières commandes (pleine largeur) #}
  <div class="col-12">
    <div class="card panel-card">
      <div class="card-header d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
          <i class="feather-clock text-primary"></i>
          <h5 class="card-title mb-0">Dernières commandes</h5>
        </div>
        <a href="{{ path('ad_commandes_liste') }}" class="btn btn-sm btn-primary">
          <i class="feather-arrow-right me-2"></i>Voir tout
        </a>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead>
              <tr>
                <th>#</th>
                <th>Client</th>
                <th>Date</th>
                <th class="text-end">Montant</th>
                <th class="text-center">Paiement</th>
                <th class="text-end">Statut</th>
              </tr>
            </thead>
            <tbody>
              {% for commande in dernieresCommandes %}
                {% set statutClass = 'secondary' %}
                {% if commande.statutCommande == 'Livrée' %}
                  {% set statutClass = 'success' %}
                {% elseif commande.statutCommande == 'En cours' or commande.statutCommande == 'En livraison' %}
                  {% set statutClass = 'primary' %}
                {% elseif commande.statutCommande == 'En attente' %}
                  {% set statutClass = 'warning' %}
                {% elseif commande.statutCommande == 'Annulée' %}
                  {% set statutClass = 'danger' %}
                {% endif %}

                <tr>
                  <td class="fw-bold text-primary">#{{ commande.idCommande }}</td>
                  <td>
                    <div class="text-truncate-1" style="max-width: 260px;">
                      {{ commande.user ? (commande.user.emailUser) : 'Invité' }}
                    </div>
                    <div class="text-muted fs-11">
                      User ID: {{ commande.user ? commande.user.id : 'N/A' }}
                    </div>
                  </td>
                  <td>
                    <div class="fw-semibold">{{ commande.dateCreationCommande|date('d/m/Y') }}</div>
                    <div class="text-muted fs-11">{{ commande.dateCreationCommande|date('H:i') }}</div>
                  </td>
                  <td class="text-end fw-bold">{{ commande.montantTotal|number_format(2, ',', ' ') }} DT</td>

                  <td class="text-center">
                    {% if commande.paidAt %}
                      <span class="badge bg-soft-success text-success"><i class="feather-check me-1"></i>Payée</span>
                    {% else %}
                      <span class="badge bg-soft-danger text-danger"><i class="feather-x me-1"></i>Non payée</span>
                    {% endif %}
                  </td>

                  <td class="text-end">
                    <span class="badge bg-soft-{{ statutClass }} text-{{ statutClass }}">
                      {{ commande.statutCommande }}
                    </span>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="6" class="text-center text-muted py-4">
                    <i class="feather-inbox fs-3 d-block mb-2 text-gray-400"></i>
                    Aucune commande récente.
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>

{% endblock %}

{% block javascripts %}
<script>
  // ===== Data depuis Symfony (Twig) =====
  const caParMois = {{ (caParMois ?? [])|json_encode|raw }};
  const topProduits = {{ (topProduits ?? [])|json_encode|raw }};

  // commandesParStatut est un tableau associatif => on construit labels + valeurs sans "values"
  const commandesParStatut = {{ (commandesParStatut ?? {})|json_encode|raw }};
  const statutLabels = Object.keys(commandesParStatut);
  const statutValues = Object.values(commandesParStatut);

  // ===== Chart CA (line/area) =====
  (function(){
    const el = document.querySelector('#chart-ca');
    if (!el) return;

    const labels = caParMois.map(x => x.month);
    const seriesData = caParMois.map(x => Number(x.total || 0));

    const options = {
      chart: {
        type: 'area',
        height: 300,
        toolbar: { show: false },
        zoom: { enabled: false }
      },
      dataLabels: { enabled: false },
      stroke: { curve: 'smooth', width: 3 },
      fill: { type: 'gradient', gradient: { shadeIntensity: 0.25, opacityFrom: 0.45, opacityTo: 0.05 } },
      xaxis: { categories: labels },
      yaxis: {
        labels: { formatter: (v) => Math.round(v) + ' DT' }
      },
      tooltip: {
        y: { formatter: (v) => (Number(v).toFixed(2) + ' DT') }
      },
      series: [{ name: 'Chiffre d’affaires', data: seriesData }]
    };

    new ApexCharts(el, options).render();
  })();

  // ===== Donut statut =====
  (function(){
    const el = document.querySelector('#chart-statut');
    if (!el) return;

    const options = {
      chart: { type: 'donut', height: 260 },
      labels: statutLabels,
      series: statutValues.map(v => Number(v || 0)),
      legend: { position: 'bottom' },
      dataLabels: { enabled: true },
      tooltip: { y: { formatter: (v) => `${v} commande(s)` } }
    };

    new ApexCharts(el, options).render();
  })();

  // ===== Bar Top produits =====
  (function(){
    const el = document.querySelector('#chart-top');
    if (!el) return;

    const labels = topProduits.map(p => p.nom_produit);
    const values = topProduits.map(p => Number(p.total_vendu || 0));

    const options = {
      chart: { type: 'bar', height: 250, toolbar: { show: false } },
      plotOptions: { bar: { borderRadius: 10, columnWidth: '55%' } },
      dataLabels: { enabled: false },
      xaxis: {
        categories: labels,
        labels: { rotate: -20 }
      },
      tooltip: { y: { formatter: (v) => `${v} unités` } },
      series: [{ name: 'Unités vendues', data: values }]
    };

    new ApexCharts(el, options).render();
  })();
</script>
{% endblock %}
