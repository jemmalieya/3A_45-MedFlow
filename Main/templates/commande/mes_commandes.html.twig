{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-12">
            
            {# En-tête #}
            <div class="text-center mb-5">
                <i class="bi bi-bag-check" style="font-size: 4rem; color: #10b981;"></i>
                <h2 class="mt-3">Mes commandes</h2>
                <p class="text-muted">Suivez l'état de vos commandes</p>
            </div>

            {# Messages Flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {# Liste des commandes #}
            {% if commandes is empty %}
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 5rem; color: #cbd5e1;"></i>
                    <h4 class="mt-4 text-muted">Aucune commande pour le moment</h4>
                    <p class="text-muted">Commencez vos achats dès maintenant !</p>
                    <a href="{{ path('front_produit_index') }}" class="btn btn-primary mt-3">
                        <i class="bi bi-shop"></i> Découvrir nos produits
                    </a>
                </div>
            {% else %}
                <div class="row g-4">
                    {% for commande in commandes %}
                    <div class="col-lg-6">
                        <div class="card shadow-sm h-100 border-0 hover-card">
                            <div class="card-header text-white" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">
                                        <i class="bi bi-receipt"></i> Commande #{{ commande.idCommande }}
                                    </h6>
                                    <span class="badge bg-warning text-dark">
                                        {{ commande.statutCommande }}
                                    </span>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> {{ commande.dateCreationCommande|date('d/m/Y à H:i') }}
                                    </small>
                                </div>

                                {# Aperçu des produits #}
                                <div class="mb-3">
                                    <h6 class="text-muted mb-2">Produits :</h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        {% for ligne in commande.ligneCommandes|slice(0, 3) %}
                                            <img src="{{ ligne.produit.imageProduit }}" 
                                                 alt="{{ ligne.produit.nomProduit }}" 
                                                 title="{{ ligne.produit.nomProduit }} (x{{ ligne.quantite_commandee }})"
                                                 style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px; border: 2px solid #e5e7eb;"
                                                 class="img-thumbnail">
                                        {% endfor %}
                                        {% if commande.ligneCommandes|length > 3 %}
                                            <div class="d-flex align-items-center justify-content-center text-muted" 
                                                 style="width: 50px; height: 50px; border-radius: 8px; background: #f3f4f6; border: 2px dashed #d1d5db;">
                                                <small>+{{ commande.ligneCommandes|length - 3 }}</small>
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>

                                {# Total #}
                                <div class="d-flex justify-content-between align-items-center mb-3 pt-3 border-top">
                                    <span class="text-muted">Total :</span>
                                    <span class="fs-5 fw-bold text-success">{{ commande.montantTotal|number_format(2, '.', '') }} Dt</span>
                                </div>

                                {# Bouton détails #}
                                <a href="{{ path('commande_details', {id: commande.idCommande}) }}" 
                                   class="btn btn-outline-primary w-100">
                                    <i class="bi bi-eye"></i> Voir les détails
                                </a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            {% endif %}

            {# Bouton retour #}
            <div class="text-center mt-5">
                <a href="{{ path('front_produit_index') }}" class="btn btn-primary btn-lg">
                    <i class="bi bi-shop"></i> Continuer mes achats
                </a>
            </div>

        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.hover-card {
    transition: all 0.3s ease;
}

.hover-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
}

.img-thumbnail {
    padding: 0;
    background: transparent;
}
</style>
{% endblock %}