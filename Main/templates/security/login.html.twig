{% extends 'base_auth.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

  <script>
    (function () {
      var storageKey = 'medflow-theme';
      var saved = null;
      try { saved = localStorage.getItem(storageKey); } catch (e) { saved = null; }
      var prefersDark = false;
      try { prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches; } catch (e) { prefersDark = false; }
      var theme = saved || (prefersDark ? 'dark' : 'light');
      document.documentElement.setAttribute('data-bs-theme', theme);
    })();
  </script>

  <style>
    :root[data-bs-theme="dark"]{
      --auth-bg: #0b1220;
      --auth-card-bg: rgba(15, 23, 42, 0.85);
      --auth-card-border: rgba(255,255,255,.12);
      --auth-card-shadow: 0 30px 90px rgba(0,0,0,.45);
      --auth-input-bg: rgba(255,255,255,.08);
      --auth-input-border: rgba(255,255,255,.18);
      --auth-input-color: #fff;
      --auth-placeholder: rgba(255,255,255,.45);
      --auth-btn-shadow: 0 18px 55px rgba(var(--bs-primary-rgb), .35);
    }

    :root[data-bs-theme="light"]{
      --auth-bg: var(--bs-body-bg);
      --auth-card-bg: rgba(255,255,255,.92);
      --auth-card-border: rgba(0,0,0,.10);
      --auth-card-shadow: 0 20px 60px rgba(0,0,0,.12);
      --auth-input-bg: rgba(0,0,0,.02);
      --auth-input-border: rgba(0,0,0,.14);
      --auth-input-color: var(--bs-body-color);
      --auth-placeholder: rgba(0,0,0,.45);
      --auth-btn-shadow: 0 14px 45px rgba(var(--bs-primary-rgb), .22);
    }

    .auth-page{
      min-height: 100vh;
      display: flex;
      align-items: center;
      background:
        radial-gradient(1200px circle at 10% 10%, rgba(var(--bs-primary-rgb), .18), transparent 45%),
        radial-gradient(900px circle at 90% 20%, rgba(var(--bs-success-rgb), .12), transparent 40%),
        var(--auth-bg);
    }

    .glass-card{
      background: var(--auth-card-bg);
      border: 1px solid var(--auth-card-border);
      box-shadow: var(--auth-card-shadow);
      backdrop-filter: blur(10px);
      border-radius: 18px;
      color: var(--bs-body-color);
    }

    .form-label{ color: var(--bs-body-color); }

    .form-control{
      background: var(--auth-input-bg) !important;
      border: 1px solid var(--auth-input-border) !important;
      color: var(--auth-input-color) !important;
      border-radius: 12px;
      padding: .85rem .95rem;
      transition: all .25s ease;
    }
    .form-control::placeholder{ color: var(--auth-placeholder); }
    .form-control:focus{
      box-shadow: 0 0 0 .2rem rgba(var(--bs-primary-rgb), .25);
      border-color: rgba(var(--bs-primary-rgb), .60) !important;
      color: var(--auth-input-color) !important;
    }

    .small-link{ color: var(--bs-link-color); }
    .small-link:hover{ color: var(--bs-link-hover-color); text-decoration: underline; }

    .btn-glow{
      border-radius: 12px;
      padding: .85rem 1rem;
      font-weight: 800;
      box-shadow: var(--auth-btn-shadow);
    }
    .btn-primary{
      background: linear-gradient(135deg, rgba(var(--bs-primary-rgb), 1), rgba(var(--bs-primary-rgb), .82));
      border: none;
    }
    .btn-primary:hover{
      filter: brightness(1.05);
    }

    #themeToggle{
      border-radius: 999px;
      padding: .35rem .55rem;
      line-height: 1;
      --bs-btn-color: var(--bs-body-color);
      --bs-btn-border-color: rgba(var(--bs-body-color-rgb), .25);
      --bs-btn-hover-bg: rgba(var(--bs-body-color-rgb), .08);
      --bs-btn-hover-border-color: rgba(var(--bs-body-color-rgb), .35);
    }

    .btn-google{
      border-radius: 12px;
      padding: .85rem 1rem;
      font-weight: 700;
      --bs-btn-color: var(--bs-body-color);
      --bs-btn-border-color: rgba(var(--bs-body-color-rgb), .25);
      --bs-btn-hover-bg: rgba(var(--bs-body-color-rgb), .08);
      --bs-btn-hover-border-color: rgba(var(--bs-body-color-rgb), .35);
    }

    .auth-brand{
      display: flex;
      align-items: center;
      gap: .75rem;
      margin-bottom: 1.25rem;
    }
    .auth-brand__logo{
      width: 44px;
      height: 44px;
      border-radius: 12px;
      background: rgba(var(--bs-body-color-rgb), .06);
      border: 1px solid rgba(var(--bs-body-color-rgb), .12);
      display: grid;
      place-items: center;
      overflow: hidden;
      flex: 0 0 auto;
    }
    .auth-brand__logo img{
      width: 32px;
      height: 32px;
      object-fit: contain;
    }
    .auth-brand__title{
      font-weight: 800;
      letter-spacing: .2px;
      line-height: 1.1;
      margin: 0;
    }
    .auth-brand__subtitle{
      margin: 0;
      font-size: .92rem;
      color: var(--bs-secondary-color);
    }
  </style>
{% endblock %}

{% block body %}
<div class="auth-page">
  <div class="container py-5">
    <div class="row justify-content-center w-100">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="glass-card p-4 p-md-5">

        <div class="auth-brand">
          <a class="auth-brand__logo" href="{{ path('app_home') }}" aria-label="Aller à l'accueil">
            <img src="{{ asset('assets/img/img.png') }}" alt="MedFlow">
          </a>
          <div class="flex-grow-1">
            <p class="auth-brand__title">MedFlow</p>
            <p class="auth-brand__subtitle">Votre espace santé, simple et sécurisé.</p>
          </div>
          <a href="{{ path('app_home') }}" class="btn btn-sm btn-outline-secondary">Accueil</a>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="fw-bold mb-0"><i class="bi bi-box-arrow-in-right me-2"></i>Connexion</h2>
          <div class="d-flex gap-2 align-items-center">
            <a class="small-link text-decoration-none" href="{{ path('app_register') }}">
              <i class="bi bi-person-plus"></i> Inscription
            </a>
            <button type="button" class="btn btn-sm btn-outline-secondary" id="themeToggle" aria-label="Basculer le thème">
              <i class="bi bi-sun-fill" id="themeIconSun" aria-hidden="true"></i>
              <i class="bi bi-moon-stars-fill d-none" id="themeIconMoon" aria-hidden="true"></i>
            </button>
          </div>
        </div>

        {# ✅ Flash messages #}
        {% for message in app.flashes('success') %}
          <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
          <div class="alert alert-warning">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
          <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {# ✅ Errors from login / UserChecker #}
        {% if error %}
          <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
          </div>
        {% endif %}

        {# ✅ Resend verification only when you show that specific error #}
        {% if error and 'vérifier votre email' in error.messageKey %}
          <form method="post" action="{{ path('app_resend_verification') }}" class="mb-3">
            <div class="input-group">
              <input type="email" name="email" class="form-control" required placeholder="Votre email">
              <button class="btn btn-warning">Renvoyer l’email</button>
            </div>
          </form>
        {% endif %}

        <p class="text-muted mb-4">
          Connectez-vous pour accéder à votre espace.
        </p>

        {# ✅ ONE SINGLE FORM (Symfony Security form_login expects these names) #}
        <form method="post" novalidate>
          <div class="mb-3">
            <label class="form-label">Adresse e-mail</label>
            <input
              type="text"
              name="emailUser"
              class="form-control"
              value="{{ last_username }}"
              placeholder="exemple@email.com"
              autocomplete="email"
            >
          </div>

          <div class="mb-3">
            <label class="form-label">Mot de passe</label>
            <input
              type="password"
              name="password"
              class="form-control"
              placeholder="••••••••"
              autocomplete="current-password"
            >
            <div class="text-end mt-2">
              <a href="{{ path('forgot_password') }}" class="small-link text-decoration-none">
                Mot de passe oublié ?
              </a>
            </div>

          </div>

          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

          <div class="d-grid mt-4">
            <button class="btn btn-primary btn-glow" type="submit">
              Se connecter
            </button>
          </div>

          {# ✅ Google button (no second form!) #}
          <div class="d-grid mt-3">
            <a href="{{ path('google_login') }}" class="btn btn-outline-secondary btn-google">
              <i class="bi bi-google me-2"></i> Se connecter avec Google
            </a>
          </div>
        </form>

        <div class="text-center mt-4">
          <span class="text-muted">Vous n’avez pas de compte ?</span>
          <a href="{{ path('app_register') }}" class="fw-bold text-decoration-none link-primary">
            Inscrivez-vous
          </a>
        </div>

        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  (function () {
    var storageKey = 'medflow-theme';
    var root = document.documentElement;

    function setIcons(theme) {
      var sun = document.getElementById('themeIconSun');
      var moon = document.getElementById('themeIconMoon');
      if (!sun || !moon) return;
      if (theme === 'dark') {
        sun.classList.remove('d-none');
        moon.classList.add('d-none');
      } else {
        sun.classList.add('d-none');
        moon.classList.remove('d-none');
      }
    }

    function applyTheme(theme) {
      root.setAttribute('data-bs-theme', theme);
      setIcons(theme);
      try { localStorage.setItem(storageKey, theme); } catch (e) {}
    }

    var current = root.getAttribute('data-bs-theme') || 'dark';
    setIcons(current);

    var toggle = document.getElementById('themeToggle');
    if (toggle) {
      toggle.addEventListener('click', function () {
        var theme = root.getAttribute('data-bs-theme') === 'dark' ? 'light' : 'dark';
        applyTheme(theme);
      });
    }
  })();
</script>
{% endblock %}
