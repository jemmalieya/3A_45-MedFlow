{% extends 'base_dashboard.html.twig' %}

{% block title %}Modifier Utilisateur - Admin{% endblock %}

{% block body %}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Modifier l'Utilisateur</h1>
    <a href="{{ path('admin_users_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm"></i> Retour
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Formulaire d'Édition</h6>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form'}}) }}
                    {{ form_errors(form) }}
                    
                    <div class="form-group">
                        {{ form_label(form.emailUser, 'Email') }}
                        {{ form_widget(form.emailUser, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                        {{ form_errors(form.emailUser) }}
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_label(form.prenom, 'Prénom') }}
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.prenom) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_label(form.nom, 'Nom') }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_label(form.cin, 'CIN') }}
                            {{ form_widget(form.cin, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                            {{ form_errors(form.cin) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_label(form.telephoneUser, 'Téléphone') }}
                            {{ form_widget(form.telephoneUser, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.telephoneUser) }}
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            {{ form_label(form.dateNaissance, 'Date de Naissance') }}
                            {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.dateNaissance) }}
                        </div>
                        <div class="form-group col-md-6">
                            {{ form_label(form.adresseUser, 'Adresse') }}
                            {{ form_widget(form.adresseUser, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.adresseUser) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Modifier
                        </button>
                        <a href="{{ path('admin_users_index') }}" class="btn btn-secondary">Annuler</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}
