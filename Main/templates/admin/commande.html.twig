{% extends 'base_dashboard.html.twig' %}
{% block title %}
    {% if commande is defined %}
        Commande #{{ commande.idCommande }}
    {% else %}
        Gestion des commandes
    {% endif %}
{% endblock %}

{% block body %}
{% if commande is not defined %}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            
            {# En-t√™te #}
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2><i class="bi bi-box-seam"></i> Gestion des commandes</h2>
                    <p class="text-muted">{{ commandes|length }} commande(s) au total</p>
                </div>
            </div>

            {# Messages Flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle-fill me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {# Tableau des commandes #}
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>#</th>
                                    <th>Date</th>
                                    <th>Client</th>
                                    <th>Montant</th>
                                    <th>Statut</th>
                                    <th>Produits</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if commandes is empty %}
                                <tr>
                                    <td colspan="7" class="text-center py-5 text-muted">
                                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                        <p class="mt-3">Aucune commande</p>
                                    </td>
                                </tr>
                                {% else %}
                                    {% for commande in commandes %}
                                    <tr>
                                        <td class="fw-bold">#{{ commande.idCommande }}</td>
                                        <td>{{ commande.dateCreationCommande|date('d/m/Y H:i') }}</td>
                                        <td>
                                            {% if commande.user %}
                                                <div class="fw-bold">{{ commande.user.nom }} {{ commande.user.prenom }}</div>
                                                <small class="text-muted">{{ commande.user.emailUser }}</small>
                                            {% else %}
                                                <span class="text-muted">Utilisateur supprim√©</span>
                                            {% endif %}
                                        </td>
                                        <td class="fw-bold text-success">{{ commande.montantTotal|number_format(2, '.', '') }} Dt</td>
                                        <td>
                                            {% if commande.statutCommande == 'En attente' %}
                                                <span class="badge bg-warning text-dark">{{ commande.statutCommande }}</span>
                                            {% elseif commande.statutCommande == 'En cours' %}
                                                <span class="badge bg-info">{{ commande.statutCommande }}</span>
                                            {% elseif commande.statutCommande == 'Exp√©di√©e' %}
                                                <span class="badge bg-primary">{{ commande.statutCommande }}</span>
                                            {% elseif commande.statutCommande == 'Livr√©e' %}
                                                <span class="badge bg-success">{{ commande.statutCommande }}</span>
                                            {% else %}
                                                <span class="badge bg-danger">{{ commande.statutCommande }}</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">{{ commande.ligneCommandes|length }} produit(s)</span>
                                        </td>
                                        <td class="text-end">
                                            <a href="{{ path('admin_commande_show', {id: commande.idCommande}) }}" 
                                               class="btn btn-sm btn-primary">
                                                <i class="bi bi-eye"></i> D√©tails
                                            </a>
                                            <a href="{{ path('admin_commande_facture_pdf', {id: commande.idCommande}) }}" 
                                               class="btn btn-sm btn-warning">
                                                <i class="bi bi-download"></i> Facture
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

{% else %}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            
            {# Bouton retour #}
            <div class="mb-4">
                <a href="{{ path('admin_commandes_index') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Retour √† la liste
                </a>
            </div>

            {# Messages Flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle-fill me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {# D√©tails de la commande #}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h4 class="mb-0"><i class="bi bi-receipt"></i> Commande #{{ commande.idCommande }}</h4>
                        </div>
                        <div class="col-md-6 text-md-end mt-2 mt-md-0">
                            <small>{{ commande.dateCreationCommande|date('d/m/Y √† H:i') }}</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    
                    {# Informations g√©n√©rales #}
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <h6 class="text-muted mb-3"><i class="bi bi-person"></i> Informations client</h6>
                            {% if commande.user %}
                                <p class="mb-1">
                                    <strong>Nom :</strong> {{ commande.user.nom }} {{ commande.user.prenom }}
                                </p>
                                <p class="mb-1">
                                    <strong>CIN :</strong> {{ commande.user.cin }}
                                </p>
                                <p class="mb-1">
                                    <strong>Email :</strong> {{ commande.user.emailUser }}
                                </p>
                                <p class="mb-1">
                                    <strong>T√©l√©phone :</strong> {{ commande.user.telephoneUser }}
                                </p>
                                {% if commande.user.adresseUser %}
                                    <p class="mb-1">
                                        <strong>Adresse :</strong> {{ commande.user.adresseUser }}
                                    </p>
                                {% endif %}
                            {% else %}
                                <p class="text-muted">Utilisateur supprim√©</p>
                            {% endif %}
                        </div>
                        <div class="col-md-4">
                            <h6 class="text-muted mb-3"><i class="bi bi-cash-stack"></i> Montant</h6>
                            <p class="fw-bold text-success fs-4 mb-0">{{ commande.montantTotal|number_format(2, '.', '') }} Dt</p>
                            {% if commande.paidAt %}
                                <small class="text-muted">
                                    <i class="bi bi-check-circle-fill text-success"></i> 
                                    Pay√© le {{ commande.paidAt|date('d/m/Y √† H:i') }}
                                </small>
                            {% endif %}
                        </div>
                        <div class="col-md-4">
                            <h6 class="text-muted mb-3"><i class="bi bi-info-circle"></i> Statut</h6>
                            <p>
                                {% if commande.statutCommande == 'En attente' %}
                                    <span class="badge bg-warning text-dark fs-6">‚è≥ {{ commande.statutCommande }}</span>
                                {% elseif commande.statutCommande == 'En cours' %}
                                    <span class="badge bg-info fs-6">üîÑ {{ commande.statutCommande }}</span>
                                {% elseif commande.statutCommande == 'Exp√©di√©e' %}
                                    <span class="badge bg-primary fs-6">üì¶ {{ commande.statutCommande }}</span>
                                {% elseif commande.statutCommande == 'Livr√©e' %}
                                    <span class="badge bg-success fs-6">‚úÖ {{ commande.statutCommande }}</span>
                                {% else %}
                                    <span class="badge bg-danger fs-6">‚ùå {{ commande.statutCommande }}</span>
                                {% endif %}
                            </p>
                            {% if commande.stripeSessionId %}
                                <small class="text-muted d-block mt-2">
                                    <i class="bi bi-credit-card"></i> Paiement Stripe
                                </small>
                            {% endif %}
                        </div>
                    </div>

                    <hr>

                    {# Produits command√©s #}
                    <h5 class="mb-3"><i class="bi bi-box-seam"></i> Produits command√©s</h5>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Produit</th>
                                    <th class="text-center">Quantit√©</th>
                                    <th class="text-end">Prix unitaire</th>
                                    <th class="text-end">Sous-total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for ligne in commande.ligneCommandes %}
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            {% if ligne.produit.imageProduit %}
                                                <img src="{{ ligne.produit.imageProduit }}" 
                                                     alt="{{ ligne.produit.nomProduit }}"
                                                     style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;"
                                                     class="me-3">
                                            {% endif %}
                                            <div>
                                                <div class="fw-bold">{{ ligne.produit.nomProduit }}</div>
                                                <small class="text-muted">{{ ligne.produit.categorieProduit }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-primary">{{ ligne.quantite_commandee }}</span>
                                    </td>
                                    <td class="text-end">{{ ligne.produit.prixProduit|number_format(2, '.', '') }} Dt</td>
                                    <td class="text-end fw-bold">{{ (ligne.produit.prixProduit * ligne.quantite_commandee)|number_format(2, '.', '') }} Dt</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot class="table-light">
                                <tr class="fw-bold">
                                    <td colspan="3" class="text-end">TOTAL :</td>
                                    <td class="text-end text-success fs-5">{{ commande.montantTotal|number_format(2, '.', '') }} Dt</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                </div>
            </div>

            {# Actions rapides #}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Actions rapides</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2 flex-wrap">
                        <a href="{{ path('admin_commande_facture_pdf', {id: commande.idCommande}) }}" 
                           class="btn btn-warning">
                            <i class="bi bi-download"></i> T√©l√©charger la facture
                        </a>
                        {% if commande.user and commande.user.emailUser %}
                            <a href="mailto:{{ commande.user.emailUser }}" class="btn btn-secondary">
                                <i class="bi bi-envelope"></i> Contacter par email
                            </a>
                        {% endif %}
                        {% if commande.user and commande.user.telephoneUser %}
                            <a href="tel:{{ commande.user.telephoneUser }}" class="btn btn-success">
                                <i class="bi bi-telephone"></i> Appeler le client
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Changer le statut #}
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Modifier le statut</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('admin_commande_statut', {id: commande.idCommande}) }}">
                        <div class="row align-items-end">
                            <div class="col-md-8">
                                <label class="form-label fw-bold">Nouveau statut :</label>
                                <select name="statut" class="form-select form-select-lg" required>
                                    <option value="En attente" {% if commande.statutCommande == 'En attente' %}selected{% endif %}>‚è≥ En attente</option>
                                    <option value="En cours" {% if commande.statutCommande == 'En cours' %}selected{% endif %}>üîÑ En cours</option>
                                    <option value="Exp√©di√©e" {% if commande.statutCommande == 'Exp√©di√©e' %}selected{% endif %}>üì¶ Exp√©di√©e</option>
                                    <option value="Livr√©e" {% if commande.statutCommande == 'Livr√©e' %}selected{% endif %}>‚úÖ Livr√©e</option>
                                    <option value="Annul√©e" {% if commande.statutCommande == 'Annul√©e' %}selected{% endif %}>‚ùå Annul√©e</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-check-circle"></i> Mettre √† jour
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            {# Supprimer la commande #}
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-trash"></i> Zone dangereuse</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Une fois supprim√©e, cette commande ne pourra pas √™tre r√©cup√©r√©e.</p>
                    <form method="post" action="{{ path('admin_commande_delete', {id: commande.idCommande}) }}"
                          onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette commande #{{ commande.idCommande }} ?');">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Supprimer cette commande
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

{% endif %}

<style>
.container-fluid * {
  color: #111827 !important;
}
</style>

{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('assets_dash/css/commandes.css') }}">
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('assets_dash/js/commandes.js') }}"></script>
{% endblock %}