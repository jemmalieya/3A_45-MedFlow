{% extends 'base_dashboard.html.twig' %}

{% block title %}
  {% if commande is defined %}
    Commande #{{ commande.idCommande }}
  {% else %}
    Gestion des commandes
  {% endif %}
{% endblock %}

{% block body %}

<style>
/* ==============================================
   ADMIN COMMANDES - MODERN BLUE DESIGN (FUSION)
   ============================================== */
:root {
    --blue-50: #eff6ff;
    --blue-100: #dbeafe;
    --blue-200: #bfdbfe;
    --blue-300: #93c5fd;
    --blue-400: #60a5fa;
    --blue-500: #3b82f6;
    --blue-600: #2563eb;
    --blue-700: #1d4ed8;
    --blue-800: #1e40af;
    --blue-900: #1e3a8a;
    --gray-50: #f9fafb;
    --gray-100: #f3f4f6;
    --gray-200: #e5e7eb;
    --gray-700: #374151;
    --gray-800: #1f2937;
    --gray-900: #111827;
}

.container-fluid {
    background: linear-gradient(135deg, var(--gray-50) 0%, var(--blue-50) 100%);
    min-height: 100vh;
    padding: 2rem !important;
}

.container-fluid * { color: var(--gray-900) !important; }

/* Flash */
.alert{
    border:none;border-radius:12px;padding:1.25rem 1.5rem;margin-bottom:1.5rem;
    box-shadow:0 4px 12px rgba(0,0,0,.1);animation:slideInDown .4s ease-out;
}
@keyframes slideInDown{from{opacity:0;transform:translateY(-30px)}to{opacity:1;transform:translateY(0)}}
.alert-success{background:linear-gradient(135deg,#dbeafe 0%,#bfdbfe 100%);color:var(--blue-800)!important;border-left:5px solid var(--blue-600)}
.alert-danger{background:linear-gradient(135deg,#fee2e2 0%,#fecaca 100%);color:#991b1b!important;border-left:5px solid #ef4444}
.alert i{font-size:1.3rem;margin-right:.5rem}

/* Header */
.d-flex.justify-content-between.align-items-center.mb-4 h2{
    font-size:2rem;font-weight:700;
    background:linear-gradient(135deg,var(--blue-600) 0%,var(--blue-800) 100%);
    -webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text;
}
.d-flex.justify-content-between.align-items-center.mb-4 h2 i{
    color:var(--blue-600)!important;-webkit-text-fill-color:var(--blue-600)!important;
}

/* Cards */
.card{border:none;border-radius:16px;box-shadow:0 4px 20px rgba(59,130,246,.08);overflow:hidden;background:white;transition:all .3s cubic-bezier(.4,0,.2,1);animation:fadeIn .5s ease-out}
.card:hover{box-shadow:0 12px 40px rgba(59,130,246,.15);transform:translateY(-4px)}
@keyframes fadeIn{from{opacity:0;transform:translateY(20px)}to{opacity:1;transform:translateY(0)}}

.card-header{border:none!important;padding:1.5rem;font-weight:600}
.card-header.bg-dark{background:linear-gradient(135deg,var(--blue-700) 0%,var(--blue-900) 100%)!important}
.card-header.bg-dark *{color:white!important}
.card-header.bg-warning{background:linear-gradient(135deg,#fbbf24 0%,#f59e0b 100%)!important}
.card-header.bg-primary{background:linear-gradient(135deg,var(--blue-500) 0%,var(--blue-700) 100%)!important}
.card-header.bg-primary *{color:white!important}
.card-header.bg-info{background:linear-gradient(135deg,#06b6d4 0%,#0891b2 100%)!important}
.card-header.bg-info *{color:white!important}
.card-header.bg-danger{background:linear-gradient(135deg,#ef4444 0%,#dc2626 100%)!important}
.card-header.bg-danger *{color:white!important}

/* Tables */
.table thead.table-dark{background:linear-gradient(135deg,var(--blue-600) 0%,var(--blue-800) 100%)!important}
.table thead.table-dark th{color:white!important;font-weight:600;text-transform:uppercase;font-size:.85rem;letter-spacing:.5px;padding:1rem;border:none}
.table tbody tr{transition:all .2s ease;border-bottom:1px solid var(--gray-200)}
.table tbody tr:hover{background:linear-gradient(135deg,var(--blue-50) 0%,var(--blue-100) 100%);transform:scale(1.01)}
.table td{padding:1rem;vertical-align:middle}
.table-light{background:var(--gray-100)!important}
.table-light th,.table-light td{font-weight:600;color:var(--gray-700)!important}

/* Badges */
.badge{padding:.5rem 1rem;font-size:.85rem;font-weight:600;border-radius:20px}
.badge.bg-warning{background:linear-gradient(135deg,#fbbf24 0%,#f59e0b 100%)!important;color:var(--gray-900)!important}
.badge.bg-info{background:linear-gradient(135deg,#06b6d4 0%,#0891b2 100%)!important;color:white!important}
.badge.bg-primary{background:linear-gradient(135deg,var(--blue-500) 0%,var(--blue-700) 100%)!important;color:white!important}
.badge.bg-success{background:linear-gradient(135deg,#10b981 0%,#059669 100%)!important;color:white!important}
.badge.bg-danger{background:linear-gradient(135deg,#ef4444 0%,#dc2626 100%)!important;color:white!important}
.badge.bg-secondary{background:linear-gradient(135deg,#6b7280 0%,#4b5563 100%)!important;color:white!important}

/* Buttons */
.btn{border-radius:10px;padding:.75rem 1.5rem;font-weight:600;border:none;position:relative;overflow:hidden;transition:all .3s cubic-bezier(.4,0,.2,1)}
.btn::before{content:'';position:absolute;top:50%;left:50%;width:0;height:0;border-radius:50%;background:rgba(255,255,255,.3);transform:translate(-50%,-50%);transition:width .6s,height .6s}
.btn:hover::before{width:300px;height:300px}
.btn-primary{background:linear-gradient(135deg,var(--blue-500) 0%,var(--blue-700) 100%);color:white!important;box-shadow:0 4px 12px rgba(59,130,246,.3)}
.btn-warning{background:linear-gradient(135deg,#fbbf24 0%,#f59e0b 100%);color:var(--gray-900)!important;box-shadow:0 4px 12px rgba(251,191,36,.3)}
.btn-success{background:linear-gradient(135deg,#10b981 0%,#059669 100%);color:white!important}
.btn-danger{background:linear-gradient(135deg,#ef4444 0%,#dc2626 100%);color:white!important}
.btn-outline-secondary{background:white;border:2px solid var(--gray-200)!important}
.btn-outline-primary{background:white;border:2px solid var(--blue-500)!important;color:var(--blue-600)!important}
.btn-sm{padding:.5rem 1rem;font-size:.875rem}
.btn-lg{padding:1rem 2rem;font-size:1.1rem}
.btn i{margin-right:.5rem}

.form-select,.form-control{border:2px solid var(--gray-200);border-radius:10px;padding:.75rem 1rem}
.form-select:focus,.form-control:focus{border-color:var(--blue-500);box-shadow:0 0 0 3px rgba(59,130,246,.1)}

.card.border-danger{border:2px solid #ef4444!important}
hr{border-color:var(--gray-200);opacity:1;margin:1.5rem 0}
</style>

{# ============================
   FLASH MESSAGES
============================ #}
{% for message in app.flashes('success') %}
  <div class="alert alert-success alert-dismissible fade show">
    <i class="bi bi-check-circle-fill me-2"></i>{{ message }}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
{% endfor %}

{% for message in app.flashes('error') %}
  <div class="alert alert-danger alert-dismissible fade show">
    <i class="bi bi-x-circle-fill me-2"></i>{{ message }}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
{% endfor %}

{# ============================
   LISTE DES COMMANDES
============================ #}
{% if commande is not defined %}

<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="mb-1"><i class="bi bi-box-seam"></i> Gestion des commandes</h2>
      <p class="text-muted mb-0">{{ commandes is defined ? commandes|length : 0 }} commande(s) au total</p>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle">
          <thead class="table-dark">
            <tr>
              <th>#</th>
              <th>Date</th>
              <th>Client</th>
              <th>Montant</th>
              <th>Statut</th>
              <th>Produits</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            {% if commandes is empty %}
              <tr>
                <td colspan="7" class="text-center py-5 text-muted">
                  <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                  <p class="mt-3 mb-0">Aucune commande</p>
                </td>
              </tr>
            {% else %}
              {% for c in commandes %}
                {% set st = c.statutCommande %}
                <tr>
                  <td class="fw-bold">#{{ c.idCommande }}</td>
                  <td>{{ c.dateCreationCommande|date('d/m/Y H:i') }}</td>

                  <td>
                    {% if c.user %}
                      <div class="fw-bold">{{ c.user.nom }} {{ c.user.prenom }}</div>
                      <small class="text-muted">{{ c.user.emailUser }}</small>
                    {% else %}
                      <span class="text-muted">Utilisateur supprim√©</span>
                    {% endif %}
                  </td>

                  <td class="fw-bold text-success">{{ c.montantTotal|number_format(2, '.', '') }} Dt</td>

                  <td>
                    {% if st == 'En attente' %}
                      <span class="badge bg-warning text-dark">‚è≥ {{ st }}</span>
                    {% elseif st == 'En cours' %}
                      <span class="badge bg-info">üîÑ {{ st }}</span>
                    {% elseif st == 'En livraison' %}
                      <span class="badge bg-primary">üöö {{ st }}</span>
                    {% elseif st == 'Exp√©di√©e' %}
                      <span class="badge bg-primary">üì¶ {{ st }}</span>
                    {% elseif st == 'Livr√©e' %}
                      <span class="badge bg-success">‚úÖ {{ st }}</span>
                    {% else %}
                      <span class="badge bg-danger">‚ùå {{ st }}</span>
                    {% endif %}
                  </td>

                  <td><span class="badge bg-secondary">{{ c.ligneCommandes|length }} produit(s)</span></td>

                  <td class="text-end">
                    <a href="{{ path('admin_commande_show', {id: c.idCommande}) }}" class="btn btn-sm btn-primary">
                      <i class="bi bi-eye"></i> D√©tails
                    </a>
                    <a href="{{ path('admin_commande_facture_pdf', {id: c.idCommande}) }}" class="btn btn-sm btn-warning">
                      <i class="bi bi-download"></i> Facture
                    </a>
                  </td>
                </tr>
              {% endfor %}
            {% endif %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

{# ============================
   DETAILS D'UNE COMMANDE
============================ #}
{% else %}

{% set st = commande.statutCommande %}

<div class="container-fluid py-4">
  <div class="col-lg-10 mx-auto">

    <div class="mb-4">
      <a href="{{ path('admin_commandes_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Retour √† la liste
      </a>
    </div>

    <div class="card shadow-sm mb-4">
      <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-receipt"></i> Commande #{{ commande.idCommande }}</h4>
        <small>{{ commande.dateCreationCommande|date('d/m/Y √† H:i') }}</small>
      </div>

      <div class="card-body">
        <div class="row mb-4">

          <div class="col-md-4">
            <h6 class="text-muted mb-3"><i class="bi bi-person"></i> Informations client</h6>
            {% if commande.user %}
              <p class="mb-1"><strong>Nom :</strong> {{ commande.user.nom }} {{ commande.user.prenom }}</p>
              <p class="mb-1"><strong>CIN :</strong> {{ commande.user.cin }}</p>
              <p class="mb-1"><strong>Email :</strong> {{ commande.user.emailUser }}</p>
              <p class="mb-1"><strong>T√©l√©phone :</strong> {{ commande.user.telephoneUser }}</p>
              {% if commande.user.adresseUser %}
                <p class="mb-1"><strong>Adresse :</strong> {{ commande.user.adresseUser }}</p>
              {% endif %}
            {% else %}
              <p class="text-muted">Utilisateur supprim√©</p>
            {% endif %}
          </div>

          <div class="col-md-4">
            <h6 class="text-muted mb-3"><i class="bi bi-cash-stack"></i> Montant</h6>
            <p class="fw-bold text-success fs-4 mb-0">{{ commande.montantTotal|number_format(2, '.', '') }} Dt</p>
            {% if commande.paidAt %}
              <small class="text-muted">
                <i class="bi bi-check-circle-fill text-success"></i>
                Pay√© le {{ commande.paidAt|date('d/m/Y √† H:i') }}
              </small>
            {% endif %}
          </div>

          <div class="col-md-4">
            <h6 class="text-muted mb-3"><i class="bi bi-info-circle"></i> Statut</h6>
            <p>
              {% if st == 'En attente' %}
                <span class="badge bg-warning text-dark fs-6">‚è≥ {{ st }}</span>
              {% elseif st == 'En cours' %}
                <span class="badge bg-info fs-6">üîÑ {{ st }}</span>
              {% elseif st == 'En livraison' %}
                <span class="badge bg-primary fs-6">üöö {{ st }}</span>
              {% elseif st == 'Exp√©di√©e' %}
                <span class="badge bg-primary fs-6">üì¶ {{ st }}</span>
              {% elseif st == 'Livr√©e' %}
                <span class="badge bg-success fs-6">‚úÖ {{ st }}</span>
              {% else %}
                <span class="badge bg-danger fs-6">‚ùå {{ st }}</span>
              {% endif %}
            </p>

            {% if commande.stripeSessionId %}
              <small class="text-muted d-block mt-2"><i class="bi bi-credit-card"></i> Paiement Stripe</small>
            {% endif %}
          </div>

        </div>

        <hr>

        <h5 class="mb-3"><i class="bi bi-box-seam"></i> Produits command√©s</h5>

        <div class="table-responsive">
          <table class="table table-bordered align-middle">
            <thead class="table-light">
              <tr>
                <th>Produit</th>
                <th class="text-center">Quantit√©</th>
                <th class="text-end">Prix unitaire</th>
                <th class="text-end">Sous-total</th>
              </tr>
            </thead>

            <tbody>
              {% for ligne in commande.ligneCommandes %}
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      {% if ligne.produit.imageProduit %}
                        <img src="{{ ligne.produit.imageProduit }}"
                             alt="{{ ligne.produit.nomProduit }}"
                             style="width:50px;height:50px;object-fit:cover;border-radius:8px"
                             class="me-3">
                      {% endif %}
                      <div>
                        <div class="fw-bold">{{ ligne.produit.nomProduit }}</div>
                        <small class="text-muted">{{ ligne.produit.categorieProduit }}</small>
                      </div>
                    </div>
                  </td>

                  <td class="text-center">
                    <span class="badge bg-primary">{{ ligne.quantite_commandee }}</span>
                  </td>

                  <td class="text-end">{{ ligne.produit.prixProduit|number_format(2, '.', '') }} Dt</td>
                  <td class="text-end fw-bold">{{ (ligne.produit.prixProduit * ligne.quantite_commandee)|number_format(2, '.', '') }} Dt</td>
                </tr>
              {% endfor %}
            </tbody>

            <tfoot class="table-light">
              <tr class="fw-bold">
                <td colspan="3" class="text-end">TOTAL :</td>
                <td class="text-end text-success fs-5">{{ commande.montantTotal|number_format(2, '.', '') }} Dt</td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>

    {# ============================
       ACTIONS RAPIDES
    ============================ #}
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="bi bi-lightning"></i> Actions rapides</h5>
      </div>
      <div class="card-body">
        <div class="d-flex gap-2 flex-wrap">
          <a href="{{ path('admin_commande_facture_pdf', {id: commande.idCommande}) }}" class="btn btn-warning">
            <i class="bi bi-download"></i> T√©l√©charger la facture
          </a>
          {% if commande.user and commande.user.emailUser %}
            <a href="mailto:{{ commande.user.emailUser }}" class="btn btn-outline-secondary">
              <i class="bi bi-envelope"></i> Contacter par email
            </a>
          {% endif %}
          {% if commande.user and commande.user.telephoneUser %}
            <a href="tel:{{ commande.user.telephoneUser }}" class="btn btn-success">
              <i class="bi bi-telephone"></i> Appeler le client
            </a>
          {% endif %}
        </div>
      </div>
    </div>

    {# ============================
       LIVRAISON (STAFF) - AJOUT√â
    ============================ #}
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="bi bi-truck"></i> Livraison (Staff)</h5>
      </div>
      <div class="card-body">

        {% if st == 'En cours' %}
          <form method="post" action="{{ path('admin_commande_start_livraison', {id: commande.idCommande}) }}">
            <button type="submit" class="btn btn-warning w-100 btn-lg">
              üöö D√©marrer la livraison
            </button>
          </form>

        {% elseif st == 'En livraison' %}
          <div class="d-grid gap-2">
            <a class="btn btn-outline-primary btn-lg"
               href="{{ path('commande_livraison_demo', {id: commande.idCommande}) }}">
              üó∫Ô∏è Ouvrir le suivi livraison (carte)
            </a>

            <form method="post" action="{{ path('admin_commande_statut', {id: commande.idCommande}) }}">
              <input type="hidden" name="statut" value="Livr√©e">
              <button type="submit" class="btn btn-success w-100 btn-lg">
                ‚úÖ Marquer comme livr√©e
              </button>
            </form>
          </div>

        {% else %}
          <div class="text-muted">La livraison n'est pas disponible pour ce statut.</div>
        {% endif %}

      </div>
    </div>

    {# ============================
       MODIFIER STATUT
    ============================ #}
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Modifier le statut</h5>
      </div>
      <div class="card-body">
        <form method="post" action="{{ path('admin_commande_statut', {id: commande.idCommande}) }}">
          <div class="row align-items-end">
            <div class="col-md-8">
              <label class="form-label fw-bold">Nouveau statut :</label>
              <select name="statut" class="form-select form-select-lg" required>
                <option value="En attente" {% if st == 'En attente' %}selected{% endif %}>‚è≥ En attente</option>
                <option value="En cours" {% if st == 'En cours' %}selected{% endif %}>üîÑ En cours</option>
                <option value="En livraison" {% if st == 'En livraison' %}selected{% endif %}>üöö En livraison</option>
                <option value="Exp√©di√©e" {% if st == 'Exp√©di√©e' %}selected{% endif %}>üì¶ Exp√©di√©e</option>
                <option value="Livr√©e" {% if st == 'Livr√©e' %}selected{% endif %}>‚úÖ Livr√©e</option>
                <option value="Annul√©e" {% if st == 'Annul√©e' %}selected{% endif %}>‚ùå Annul√©e</option>
              </select>
            </div>
            <div class="col-md-4">
              <button type="submit" class="btn btn-primary btn-lg w-100">
                <i class="bi bi-check-circle"></i> Mettre √† jour
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>

    {# ============================
       SUPPRIMER COMMANDE
    ============================ #}
    <div class="card shadow-sm border-danger">
      <div class="card-header bg-danger text-white">
        <h5 class="mb-0"><i class="bi bi-trash"></i> Zone dangereuse</h5>
      </div>
      <div class="card-body">
        <p class="text-muted">Une fois supprim√©e, cette commande ne pourra pas √™tre r√©cup√©r√©e.</p>
        <form method="post"
              action="{{ path('admin_commande_delete', {id: commande.idCommande}) }}"
              onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette commande #{{ commande.idCommande }} ?');">
          <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Supprimer cette commande
          </button>
        </form>
      </div>
    </div>

  </div>
</div>

{% endif %}

{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('assets_dash/js/commandes.js') }}"></script>
{% endblock %}
