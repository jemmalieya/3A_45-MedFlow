  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('assets_dash/css/admin/produits.css') }}">
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('assets_dash/js/admin/produits.js') }}"></script>
