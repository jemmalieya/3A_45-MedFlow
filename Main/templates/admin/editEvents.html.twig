{% extends 'base_dashboard.html.twig' %}

{% block title %}Modifier Evenement{% endblock %}

{% block body %}
<main class="main">
  <section class="section" style="padding-top: 120px;">
    <div class="container">

      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="mb-1">Modifier événement</h1>
          <p class="text-muted mb-0">{{ evenement.titreEvent }}</p>
        </div>

        <a href="{{ path('admin_evenement_index') }}" class="btn btn-outline-secondary">
          Retour
        </a>
      </div>

      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          {% include 'evenement/_form.html.twig' with { form: form, button_label: 'Enregistrer' } %}
        </div>
      </div>

    </div>
  </section>
</main>
{% endblock %}
