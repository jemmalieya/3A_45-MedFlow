{% extends 'base_dashboard.html.twig' %}

{% block title %}Modifier Produit{% endblock %}

{% block body %}
<h2 class="mb-4 text-center">Modifier le produit #{{ produit.id_produit }}</h2>

{% for message in app.flashes('success') %}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{ message }}
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
{% endfor %}

<div class="card shadow-sm">
  <div class="card-body">
    {{ form_start(form, {'attr': {'class': 'row g-3', 'novalidate': 'novalidate'}}) }}

      <div class="col-md-6">
        {{ form_label(form.nom_produit, 'Nom du produit', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.nom_produit, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nom_produit) }}
      </div>

      <div class="col-md-6">
        {{ form_label(form.prix_produit, 'Prix (DT)', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.prix_produit, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.prix_produit) }}
      </div>

      <div class="col-md-6">
        {{ form_label(form.quantite_produit, 'Quantité', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.quantite_produit, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.quantite_produit) }}
      </div>

      <div class="col-md-6">
        {{ form_label(form.categorie_produit, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.categorie_produit, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.categorie_produit) }}
      </div>

      <div class="col-md-6">
        {{ form_label(form.status_produit, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.status_produit, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.status_produit) }}
      </div>

      <div class="col-md-6">
        {{ form_label(form.image_produit, 'Image (URL)', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.image_produit, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.image_produit) }}
      </div>

      <div class="col-12">
        {{ form_label(form.description_produit, 'Description', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description_produit, {'attr': {'class': 'form-control', 'rows': 4}}) }}
        {{ form_errors(form.description_produit) }}
      </div>

      <div class="col-12 mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-warning">Mettre à jour</button>
        <a href="{{ path('admin_produits_index') }}" class="btn btn-outline-secondary">Annuler</a>
      </div>

    {{ form_end(form) }}
  </div>
</div>
<style>
.page-produit-black * { color: #111827 !important; }
</style>


{% endblock %}




{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('assets_dash/css/produits.css') }}">
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('assets_dash/js/produits.js') }}"></script>
{% endblock %}
