{% extends 'base_dashboard.html.twig' %}

{% block title %}Ajouter Événement{% endblock %}

{% block body %}
<main class="main">
  <section class="section" style="padding-top: 120px;">
    <div class="container" style="max-width: 1100px;">

      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="mb-1">Ajouter un evenement</h1>
          <p class="text-muted mb-0">Créer un nouvel evenement</p>
        </div>

        <a href="{{ path('admin_evenement_index') }}" class="btn btn-outline-secondary">
          Retour
        </a>
      </div>

      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          {% include 'evenement/_form.html.twig' with { form: form, button_label: 'Ajouter' } %}
        </div>
      </div>

    </div>
  </section>
</main>
{% endblock %}
