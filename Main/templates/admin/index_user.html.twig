{% extends 'base_dashboard.html.twig' %}

{% block title %}Gestion des Utilisateurs - Admin{% endblock %}

{% block body %}
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Gestion des Utilisateurs</h1>
    <a href="{{ path('admin_user_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
        <i class="fas fa-user-plus fa-sm text-white-50"></i> Ajouter Utilisateur
    </a>
</div>

<!-- Users Table -->
<div class="row">
    <div class="col-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Liste des Utilisateurs</h6>
            </div>
            <div class="card-body">
                {% if users|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead class="bg-light">
                            <tr>
                                <th>ID</th>
                                <th>Email</th>
                                <th>Prénom</th>
                                <th>Nom</th>
                                <th>Téléphone</th>
                                <th>CIN</th>
                                <th>Rôle</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.emailUser }}</td>
                                <td>{{ user.prenom }}</td>
                                <td>{{ user.nom }}</td>
                                <td>{{ user.telephoneUser }}</td>
                                <td>{{ user.cin }}</td>
                                <td>
                                    {% if 'ROLE_ADMIN' in user.roles %}
                                        <span class="badge badge-danger">Admin</span>
                                    {% elseif 'ROLE_STAFF' in user.roles %}
                                        <span class="badge badge-info">Staff</span>
                                    {% elseif 'ROLE_MEDECIN' in user.roles %}
                                        <span class="badge badge-success">Médecin</span>
                                    {% elseif 'ROLE_PATIENT' in user.roles %}
                                        <span class="badge badge-warning">Patient</span>
                                    {% else %}
                                        <span class="badge badge-secondary">Utilisateur</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning" title="Éditer">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="{{ path('admin_user_delete', {'id': user.id}) }}" method="POST" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <p class="text-muted text-center py-4">Aucun utilisateur trouvé.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
