{% extends 'base_dashboard.html.twig' %}
{% block title %}Demandes - {{ evenement.titreEvent }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
<a href="{{ path('admin_evenement_pdf', {id: evenement.id}) }}"
   class="btn btn-danger"
   target="_blank">
  <i class="fas fa-file-pdf mr-1"></i> Fiche PDF
</a>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-1">Demandes ‚Äî {{ evenement.titreEvent }}</h1>
      <p class="text-muted mb-0">
        Pending: {{ pendingCount }} ‚Ä¢ Accept√©s: {{ acceptedCount }}
        {% if evenement.nbParticipantsMaxEvent is not null %} / {{ evenement.nbParticipantsMaxEvent }}{% endif %}
      </p>
    </div>

    <a href="{{ path('admin_evenement_demandes_index') }}" class="btn btn-outline-secondary btn-sm">
      ‚Üê Retour
    </a>
  </div>

  {% for m in app.flashes('success') %}
    <div class="alert alert-success">{{ m }}</div>
  {% endfor %}
  {% for m in app.flashes('danger') %}
    <div class="alert alert-danger">{{ m }}</div>
  {% endfor %}

  {# ==========================
     ‚úÖ IA RISK (AFFICHAGE)
     ========================== #}
  {% if riskData is defined %}
    {% set score = riskData.riskScore|default(0) %}
    {% set level = 'success' %}
    {% if score >= 70 %}
      {% set level = 'danger' %}
    {% elseif score >= 40 %}
      {% set level = 'warning' %}
    {% endif %}

    <div class="card shadow-sm border-0 mb-3">
      <div class="card-body d-flex align-items-center justify-content-between flex-wrap gap-3">
        <div>
          <h5 class="mb-1">üìä Risque d‚Äô√©chec</h5>
          <div class="text-muted small">
            Bas√© sur inscriptions, proximit√© date, popularit√© type/ville.
          </div>

          {% if riskData.reasons is not empty %}
            <div class="mt-2">
              {% for r in riskData.reasons %}
                <span class="badge bg-warning text-dark me-1 mb-1">{{ r }}</span>
              {% endfor %}
            </div>
          {% else %}
            <div class="mt-2 text-muted small">Aucune alerte d√©tect√©e ‚úÖ</div>
          {% endif %}
        </div>

        <div class="text-end">
          <div class="display-6 fw-bold text-{{ level }}">{{ score }}%</div>
          <div class="small text-muted">
            {% if score >= 70 %}Risque √©lev√©{% elseif score >= 40 %}Risque moyen{% else %}Risque faible{% endif %}
          </div>
        </div>
      </div>

      <div class="progress" style="height: 10px;">
        <div class="progress-bar bg-{{ level }}" role="progressbar"
             style="width: {{ score }}%;" aria-valuenow="{{ score }}" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    </div>
  {% endif %}

  <div class="card shadow-sm border-0">
    <div class="card-body">

      {% if demandes is empty %}
        <div class="alert alert-info mb-0">Aucune demande pour cet √©v√©nement.</div>
      {% else %}
        <div class="table-responsive">
          <table class="table align-middle">
            <thead class="table-light">
              <tr>
                <th>Nom</th>
                <th>Email</th>
                <th>T√©l</th>
                <th>Message</th>
                <th>Statut</th>
                <th>Cr√©√©e</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              {% for d in demandes %}
                <tr>
                  <td>{{ d.nom }}</td>
                  <td>{{ d.email }}</td>
                  <td>{{ d.tel }}</td>
                  <td style="max-width:340px;">
                    <div class="text-truncate" title="{{ d.message }}">{{ d.message }}</div>
                  </td>
                  <td>
                    {% if d.status == 'pending' %}
                      <span class="badge bg-warning text-dark">Pending</span>
                    {% elseif d.status == 'accepted' %}
                      <span class="badge bg-success">Accept√©e</span>
                    {% else %}
                      <span class="badge bg-danger">Refus√©e</span>
                    {% endif %}
                  </td>
                  <td>{{ d.created_at }}</td>
                  <td class="text-end">
                    {% if d.status == 'pending' %}
                      <form method="post" action="{{ path('admin_evenement_demandes_decide', {id: evenement.id, demandeId: d.id}) }}" class="d-inline">
                        <input type="hidden" name="status" value="accepted">
                        <button class="btn btn-sm btn-success">Accepter</button>
                      </form>

                      <form method="post" action="{{ path('admin_evenement_demandes_decide', {id: evenement.id, demandeId: d.id}) }}" class="d-inline">
                        <input type="hidden" name="status" value="refused">
                        <button class="btn btn-sm btn-danger">Refuser</button>
                      </form>
                    {% else %}
                      <span class="text-muted small">D√©cision: {{ d.decision_at }}</span>
                    {% endif %}
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      {% endif %}

    </div>
  </div>

</div>
{% endblock %}
