{% extends 'base_auth.html.twig' %}

{% block title %}{{ title|default('Inscription') }}{% endblock %}

{% block stylesheets %}

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

  <script>
    (function () {
      var storageKey = 'medflow-theme';
      var saved = null;
      try { saved = localStorage.getItem(storageKey); } catch (e) { saved = null; }
      var prefersDark = false;
      try { prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches; } catch (e) { prefersDark = false; }
      var theme = saved || (prefersDark ? 'dark' : 'light');
      document.documentElement.setAttribute('data-bs-theme', theme);
    })();
  </script>

  <style>
    :root[data-bs-theme="dark"]{
      --auth-bg: #0b1220;
      --auth-card-bg: rgba(15, 23, 42, 0.85);
      --auth-card-border: rgba(255,255,255,.12);
      --auth-card-shadow: 0 30px 90px rgba(0,0,0,.45);
      --auth-input-bg: rgba(255,255,255,.08);
      --auth-input-border: rgba(255,255,255,.18);
      --auth-input-color: #fff;
      --auth-placeholder: rgba(255,255,255,.45);
      --auth-btn-shadow: 0 18px 55px rgba(var(--bs-primary-rgb), .35);
    }

    :root[data-bs-theme="light"]{
      --auth-bg: var(--bs-body-bg);
      --auth-card-bg: rgba(255,255,255,.92);
      --auth-card-border: rgba(0,0,0,.10);
      --auth-card-shadow: 0 20px 60px rgba(0,0,0,.12);
      --auth-input-bg: rgba(0,0,0,.02);
      --auth-input-border: rgba(0,0,0,.14);
      --auth-input-color: var(--bs-body-color);
      --auth-placeholder: rgba(0,0,0,.45);
      --auth-btn-shadow: 0 14px 45px rgba(var(--bs-primary-rgb), .22);
    }

    .auth-page{
      min-height: 100vh;
      display: flex;
      align-items: center;
      background:
        radial-gradient(1200px circle at 10% 10%, rgba(var(--bs-primary-rgb), .18), transparent 45%),
        radial-gradient(900px circle at 90% 20%, rgba(var(--bs-success-rgb), .12), transparent 40%),
        var(--auth-bg);
    }

    /* Card */
    .glass-card{
      background: var(--auth-card-bg);
      border: 1px solid var(--auth-card-border);
      box-shadow: var(--auth-card-shadow);
      backdrop-filter: blur(10px);
      border-radius: 18px;
      color: var(--bs-body-color);
    }

    /* Pills */
    .brand-pill{
      display:inline-flex;
      align-items:center;
      gap:.55rem;
      padding:.45rem .8rem;
      border-radius: 999px;
      background: rgba(var(--bs-body-color-rgb), .08);
      border: 1px solid rgba(var(--bs-body-color-rgb), .15);
      color: var(--bs-body-color);
      font-weight: 700;
      letter-spacing:.2px;
    }

    .help-text{ color: var(--bs-secondary-color); }
    .form-label{ color: var(--bs-body-color); }

    /* Inputs */
    .form-control, .form-select{
      background: var(--auth-input-bg) !important;
      border: 1px solid var(--auth-input-border) !important;
      color: var(--auth-input-color) !important;
      border-radius: 12px;
      padding: .8rem .95rem;
      transition: all .25s ease;
    }
    .form-control::placeholder{
      color: var(--auth-placeholder);
    }
    .form-control:focus, .form-select:focus{
      box-shadow: 0 0 0 .2rem rgba(var(--bs-primary-rgb), .25);
      border-color: rgba(var(--bs-primary-rgb), .60) !important;
      color: var(--auth-input-color) !important;
    }

    /* Links */
    .small-link{ color: var(--bs-link-color); }
    .small-link:hover{ color: var(--bs-link-hover-color); text-decoration: underline; }

    /* Button */
    .btn-glow{
      border-radius: 12px;
      padding: .85rem 1rem;
      font-weight: 800;
      box-shadow: var(--auth-btn-shadow);
    }
    .btn-primary{
      background: linear-gradient(135deg, rgba(var(--bs-primary-rgb), 1), rgba(var(--bs-primary-rgb), .82));
      border: none;
    }
    .btn-primary:hover{
      filter: brightness(1.05);
    }

    #themeToggle{
      border-radius: 999px;
      padding: .35rem .55rem;
      line-height: 1;
      --bs-btn-color: var(--bs-body-color);
      --bs-btn-border-color: rgba(var(--bs-body-color-rgb), .25);
      --bs-btn-hover-bg: rgba(var(--bs-body-color-rgb), .08);
      --bs-btn-hover-border-color: rgba(var(--bs-body-color-rgb), .35);
    }

    .auth-brand{
      display: flex;
      align-items: center;
      gap: .75rem;
      margin-bottom: 1.25rem;
    }
    .auth-brand__logo{
      width: 44px;
      height: 44px;
      border-radius: 12px;
      background: rgba(var(--bs-body-color-rgb), .06);
      border: 1px solid rgba(var(--bs-body-color-rgb), .12);
      display: grid;
      place-items: center;
      overflow: hidden;
      flex: 0 0 auto;
    }
    .auth-brand__logo img{
      width: 32px;
      height: 32px;
      object-fit: contain;
    }
    .auth-brand__title{
      font-weight: 800;
      letter-spacing: .2px;
      line-height: 1.1;
      margin: 0;
    }
    .auth-brand__subtitle{
      margin: 0;
      font-size: .92rem;
      color: var(--bs-secondary-color);
    }

    /* Errors */
    .err{
      color: var(--bs-danger);
      font-size: .9rem;
      margin-top:.35rem;
    }

    /* Bootstrap invalid */
    .form-control.is-invalid, .form-select.is-invalid{
      border-color: rgba(220, 53, 69, .9) !important;
      box-shadow: 0 0 0 .15rem rgba(220, 53, 69, .15);
    }

    .alert-glass{
      background: rgba(var(--bs-danger-rgb), .10);
      border: 1px solid rgba(var(--bs-danger-rgb), .35);
      color: var(--bs-body-color);
      border-radius: 14px;
    }
  </style>
{% endblock %}

{% block body %}
<div class="auth-page">
  <div class="container py-5">
    <div class="row justify-content-center w-100">
      <div class="col-12 col-lg-9 col-xl-8">
        <div class="glass-card p-4 p-md-5">

        <div class="auth-brand">
          <a class="auth-brand__logo" href="{{ path('app_home') }}" aria-label="Aller à l'accueil">
            <img src="{{ asset('assets/img/img.png') }}" alt="MedFlow">
          </a>
          <div class="flex-grow-1">
            <p class="auth-brand__title">MedFlow</p>
            <p class="auth-brand__subtitle">Créer votre compte en quelques secondes.</p>
          </div>
          <a href="{{ path('app_home') }}" class="btn btn-sm btn-outline-secondary">Accueil</a>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
          <span class="brand-pill"><i class="bi bi-shield-lock me-2"></i>Inscription</span>
          <div class="d-flex gap-2 align-items-center">
            <a class="small-link text-decoration-none" href="{{ path('app_login') }}">
              <i class="bi bi-box-arrow-in-right"></i> Connexion
            </a>
            <button type="button" class="btn btn-sm btn-outline-secondary" id="themeToggle" aria-label="Basculer le thème">
              <i class="bi bi-sun-fill" id="themeIconSun" aria-hidden="true"></i>
              <i class="bi bi-moon-stars-fill d-none" id="themeIconMoon" aria-hidden="true"></i>
            </button>
          </div>
        </div>

        <h2 class="fw-bold mb-1">Créer un compte</h2>
        <p class="help-text mb-4">Validation côté serveur uniquement (pas de validation HTML5 / JS).</p>

        {# ✅ ERREURS GLOBALES (ex: email déjà utilisé, CSRF, etc.) #}
        {% if form.vars.errors|length > 0 %}
          <div class="alert alert-glass mb-4">
            <div class="fw-bold mb-1"><i class="bi bi-exclamation-triangle me-2"></i>Veuillez corriger les erreurs :</div>
            {{ form_errors(form) }}
          </div>
        {% endif %}

        {{ form_start(form, { attr: { novalidate: 'novalidate' }, enctype: 'multipart/form-data' }) }}

        <div class="row g-3">

          <div class="col-md-6">
            {{ form_label(form.cin, 'CIN', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.cin, {
              attr: {
                class: 'form-control ' ~ (form.cin.vars.errors|length ? 'is-invalid' : ''),
                placeholder: '8 chiffres'
              }
            }) }}
            {% if form.cin.vars.errors|length %}
              <div class="err">{{ form_errors(form.cin) }}</div>
            {% endif %}
          </div>

          <div class="col-md-6">
            {{ form_label(form.profilePictureFile, 'Photo de profil (optionnel)', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.profilePictureFile, {
              attr: { class: 'form-control ' ~ (form.profilePictureFile.vars.errors|length ? 'is-invalid' : '') }
            }) }}
            {% if form.profilePictureFile.vars.errors|length %}
              <div class="err">{{ form_errors(form.profilePictureFile) }}</div>
            {% endif %}
          </div>

          <div class="col-md-6">
            {{ form_label(form.nom, 'Nom', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.nom, {
              attr: {
                class: 'form-control ' ~ (form.nom.vars.errors|length ? 'is-invalid' : ''),
                placeholder: 'Votre nom'
              }
            }) }}
            {% if form.nom.vars.errors|length %}
              <div class="err">{{ form_errors(form.nom) }}</div>
            {% endif %}
          </div>

          <div class="col-md-6">
            {{ form_label(form.prenom, 'Prénom', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.prenom, {
              attr: {
                class: 'form-control ' ~ (form.prenom.vars.errors|length ? 'is-invalid' : ''),
                placeholder: 'Votre prénom'
              }
            }) }}
            {% if form.prenom.vars.errors|length %}
              <div class="err">{{ form_errors(form.prenom) }}</div>
            {% endif %}
          </div>

          <div class="col-md-6">
            {{ form_label(form.dateNaissance, 'Date de naissance', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.dateNaissance, {
              attr: { class: 'form-control ' ~ (form.dateNaissance.vars.errors|length ? 'is-invalid' : '') }
            }) }}
            {% if form.dateNaissance.vars.errors|length %}
              <div class="err">{{ form_errors(form.dateNaissance) }}</div>
            {% endif %}
          </div>

          <div class="col-md-6">
            {{ form_label(form.telephoneUser, 'Téléphone', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.telephoneUser, {
              attr: {
                class: 'form-control ' ~ (form.telephoneUser.vars.errors|length ? 'is-invalid' : ''),
                placeholder: '54430709 ou +21654430709'
              }
            }) }}
            {% if form.telephoneUser.vars.errors|length %}
              <div class="err">{{ form_errors(form.telephoneUser) }}</div>
            {% endif %}
          </div>

          <div class="col-md-6">
            {{ form_label(form.emailUser, 'Adresse e-mail', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.emailUser, {
              attr: {
                class: 'form-control ' ~ (form.emailUser.vars.errors|length ? 'is-invalid' : ''),
                placeholder: 'exemple@email.com'
              }
            }) }}
            {% if form.emailUser.vars.errors|length %}
              <div class="err">{{ form_errors(form.emailUser) }}</div>
            {% endif %}
          </div>

          <div class="col-md-6">
            {{ form_label(form.adresseUser, 'Adresse (optionnel)', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.adresseUser, {
              attr: {
                class: 'form-control ' ~ (form.adresseUser.vars.errors|length ? 'is-invalid' : ''),
                placeholder: 'Votre adresse'
              }
            }) }}
            {% if form.adresseUser.vars.errors|length %}
              <div class="err">{{ form_errors(form.adresseUser) }}</div>
            {% endif %}
          </div>

          <div class="col-md-6">
            {{ form_label(form.plainPassword, 'Mot de passe', { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.plainPassword, {
              attr: {
                class: 'form-control ' ~ (form.plainPassword.vars.errors|length ? 'is-invalid' : ''),
                placeholder: '••••••••'
              }
            }) }}
            {% if form.plainPassword.vars.errors|length %}
              <div class="err">{{ form_errors(form.plainPassword) }}</div>
            {% endif %}
          </div>

        </div>

        <div class="d-grid mt-4">
          <button class="btn btn-primary btn-glow" type="submit">
            <i class="bi bi-person-plus"></i> S’inscrire
          </button>
        </div>

        {{ form_end(form) }}

        <div class="text-center mt-4">
          <span class="text-muted">Vous avez déjà un compte ?</span>
          <a href="{{ path('app_login') }}" class="fw-bold text-decoration-none link-primary">
            Connectez-vous
          </a>
        </div>

        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  (function () {
    var storageKey = 'medflow-theme';
    var root = document.documentElement;

    function setIcons(theme) {
      var sun = document.getElementById('themeIconSun');
      var moon = document.getElementById('themeIconMoon');
      if (!sun || !moon) return;
      if (theme === 'dark') {
        sun.classList.remove('d-none');
        moon.classList.add('d-none');
      } else {
        sun.classList.add('d-none');
        moon.classList.remove('d-none');
      }
    }

    function applyTheme(theme) {
      root.setAttribute('data-bs-theme', theme);
      setIcons(theme);
      try { localStorage.setItem(storageKey, theme); } catch (e) {}
    }

    var current = root.getAttribute('data-bs-theme') || 'dark';
    setIcons(current);

    var toggle = document.getElementById('themeToggle');
    if (toggle) {
      toggle.addEventListener('click', function () {
        var theme = root.getAttribute('data-bs-theme') === 'dark' ? 'light' : 'dark';
        applyTheme(theme);
      });
    }
  })();
</script>
{% endblock %}
